@{
    Layout = null;
}
<!doctype html>
<html lang="en" class="h-full">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <title>@(ViewData["Title"] ?? "Bugence - Access")</title>
