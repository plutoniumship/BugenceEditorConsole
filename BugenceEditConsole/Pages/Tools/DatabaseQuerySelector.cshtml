</html>`;
            editorWindow.document.open();
            editorWindow.document.write(html);
            editorWindow.document.close();
            editorWindow.focus();
            const doc = editorWindow.document;
            const textarea = doc.getElementById('editorTextarea');
            const lineNumbers = doc.getElementById('lineNumbers');
            const submitBtn = doc.getElementById('submitBtn');
            const cancelBtn = doc.getElementById('cancelBtn');
            const updateLines = () => {
                if (!textarea || !lineNumbers) return;
                const lines = (textarea.value || '').split('\n').length || 1;
                lineNumbers.innerHTML = Array.from({ length: lines }, (_, idx) => idx + 1).join('<br>');
            };
            updateLines();
            textarea?.addEventListener('input', updateLines);
            textarea?.addEventListener('scroll', () => {
                if (!lineNumbers || !textarea) return;
                lineNumbers.scrollTop = textarea.scrollTop;
            });
            submitBtn?.addEventListener('click', () => {
                if (querySql && textarea) {
                    querySql.value = textarea.value || '';
                }
                editorWindow?.close();
            });
            cancelBtn?.addEventListener('click', () => editorWindow?.close());
        };

        openEditor?.addEventListener('click', () => {
            openEditorPopup();
        });

        generateFieldSql?.addEventListener('click', async () => {
            const sqlValue = querySql?.value?.trim() || '';
            if (!sqlValue) {
                setStatus('Provide SQL first to generate field SQL.', true);
                return;
            }

            setStatus('Generating field SQL...');
            generateFieldSql.disabled = true;
            try {
                const res = await fetch('/Tools/DatabaseQuerySelector?handler=GenerateFieldSql', {
                    method: 'POST',
                    credentials: 'include',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': csrfToken
                    },
                    body: JSON.stringify({ sqlText: sqlValue })
                });
                const data = await res.json();
                if (!res.ok || !data?.success) {
                    setStatus(data?.message || 'Unable to generate field SQL.', true);
                    return;
                }

                if (fieldGenerationSql) fieldGenerationSql.value = data.fieldGenerationSql || '';
                if (fieldColumnsPreview) {
                    const cols = Array.isArray(data.columns) ? data.columns : [];
                    fieldColumnsPreview.textContent = cols.length > 0
                        ? `Columns: ${cols.join(', ')}`
                        : 'No columns detected.';
                }
                setStatus('Field SQL generated.');
            } catch (err) {
                setStatus('Unable to generate field SQL.', true);
            } finally {
                generateFieldSql.disabled = false;
            }
        });

        saveQuery?.addEventListener('click', async () => {
            if (!canManage) return;
            const nameValue = queryName?.value?.trim() || '';
            const sqlValue = querySql?.value?.trim() || '';
            const fieldSqlValue = fieldGenerationSql?.value?.trim() || '';
            const dguidValue = dguidDisplay?.textContent?.trim() || '';
            if (!nameValue || !sqlValue) {
                setStatus('Please provide a name and SQL.', true);
                return;
            }
            const isEdit = !!(queryId?.value);
            setStatus(isEdit ? 'Updating record...' : 'Creating record...');
            saveQuery.disabled = true;
            try {
                const res = await fetch(`/Tools/DatabaseQuerySelector?handler=${isEdit ? 'Update' : 'Create'}` , {
                    method: 'POST',
                    credentials: 'include',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': csrfToken
                    },
                    body: JSON.stringify({
                        id: queryId?.value || 0,
                        dguid: !isEdit ? dguidValue : undefined,
                        name: nameValue,
                        sqlText: sqlValue,
                        fieldGenerationSql: fieldSqlValue
                    })
                });
                if (res.redirected) {
                    window.location.href = res.url;
                    return;
                }
                const data = await res.json();
                if (!res.ok || !data?.success) {
                    setStatus(data?.message || 'Unable to save record.', true);
                    return;
                }
                setStatus(isEdit ? 'Record updated.' : 'Record created.');
                window.location.reload();
            } catch (err) {
                setStatus('Unable to save record.', true);
            } finally {
                saveQuery.disabled = false;
            }
        });

        document.querySelectorAll('.edit-query').forEach((button) => {
            button.addEventListener('click', () => {
                const id = button.getAttribute('data-query-id');
                const query = queriesData.find(q => (q.id || '').toString() === (id || ''));
                if (!query) return;
                if (queryId) queryId.value = query.id || '';
                if (queryName) queryName.value = query.queryName || '';
                if (querySql) querySql.value = query.sqlText || '';
                if (fieldGenerationSql) fieldGenerationSql.value = query.fieldGenerationSql || '';
                if (fieldColumnsPreview) fieldColumnsPreview.textContent = '';
                if (idDisplay) idDisplay.textContent = query.id || '1';
                if (dguidDisplay) dguidDisplay.textContent = query.dguid || 'Auto';
                if (drawerTitle) drawerTitle.textContent = 'Edit Query Record';
                if (drawerSubtitle) drawerSubtitle.textContent = 'Update the SQL template details.';
                if (saveQuery) saveQuery.textContent = 'Save Changes';
                setStatus('');
                showDrawer(true);
            });
        });

        document.querySelectorAll('.delete-query').forEach((button) => {
            button.addEventListener('click', () => {
                deleteQueryId = button.getAttribute('data-query-id');
                showConfirm(true);
            });
        });

        cancelDelete?.addEventListener('click', () => showConfirm(false));
        confirmModal?.querySelector('.drawer-backdrop')?.addEventListener('click', () => showConfirm(false));
        confirmDelete?.addEventListener('click', async () => {
            if (!deleteQueryId) return;
            confirmDelete.disabled = true;
            try {
                const res = await fetch('/Tools/DatabaseQuerySelector?handler=Delete', {
                    method: 'POST',
                    credentials: 'include',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': csrfToken
                    },
                    body: JSON.stringify({ id: Number(deleteQueryId) })
                });
                if (res.redirected) {
                    window.location.href = res.url;
                    return;
                }
                const data = await res.json();
                if (!res.ok || !data?.success) {
                    setStatus(data?.message || 'Unable to delete record.', true);
                    return;
                }
                window.location.reload();
            } catch (err) {
                setStatus('Unable to delete record.', true);
            } finally {
                confirmDelete.disabled = false;
                showConfirm(false);
                deleteQueryId = null;
            }
        });

        const applyFilters = () => {
            const term = (querySearch?.value || '').trim().toLowerCase();
            const filtered = tableRows.filter((row) => {
                if (!term) return true;
                const searchValue = querySearchMap.get(row.dataset.queryId || '') || '';
                return searchValue.includes(term);
            });

            const totalPages = Math.max(1, Math.ceil(filtered.length / pageSize));
            if (currentPage > totalPages) currentPage = totalPages;

            tableRows.forEach(row => row.style.display = 'none');
            const start = (currentPage - 1) * pageSize;
            const pageItems = filtered.slice(start, start + pageSize);
            pageItems.forEach(row => row.style.display = '');

            if (queryPagination) {
                queryPagination.style.display = filtered.length > pageSize ? 'flex' : 'none';
            }
            if (pageInfo) {
                pageInfo.textContent = `Page ${currentPage} of ${totalPages}`;
            }
            if (prevPage) prevPage.disabled = currentPage <= 1;
            if (nextPage) nextPage.disabled = currentPage >= totalPages;
        };

        querySearch?.addEventListener('input', () => {
            currentPage = 1;
            applyFilters();
        });

        prevPage?.addEventListener('click', () => {
            currentPage = Math.max(1, currentPage - 1);
            applyFilters();
        });

        nextPage?.addEventListener('click', () => {
            currentPage += 1;
            applyFilters();
        });

        applyFilters();
    </script>
}

