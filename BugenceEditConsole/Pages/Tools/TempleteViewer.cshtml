            editorWindow.document.open();
            editorWindow.document.write(html);
            editorWindow.document.close();
            editorWindow.focus();

            const doc = editorWindow.document;
            const textarea = doc.getElementById('editorTextarea');
            const submitBtn = doc.getElementById('submitBtn');
            const cancelBtn = doc.getElementById('cancelBtn');
            const repeaterList = doc.getElementById('repeaterList');
            const repeaterSearch = doc.getElementById('repeaterSearch');
            const repeaterTabs = Array.from(doc.querySelectorAll('#repeaterTabs .tab-btn'));

            const loadCss = (href) => new Promise((resolve) => {
                const link = doc.createElement('link');
                link.rel = 'stylesheet';
                link.href = href;
                link.onload = () => resolve();
                link.onerror = () => resolve();
                doc.head.appendChild(link);
            });
            const loadScript = (src) => new Promise((resolve) => {
                const script = doc.createElement('script');
                script.src = src;
                script.onload = () => resolve();
                script.onerror = () => resolve();
                doc.body.appendChild(script);
            });

            await loadCss('https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.16/codemirror.min.css');
            await loadCss('https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.16/theme/material-darker.min.css');
            await loadScript('https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.16/codemirror.min.js');
            await loadScript('https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.16/mode/xml/xml.min.js');
            await loadScript('https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.16/mode/javascript/javascript.min.js');
            await loadScript('https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.16/mode/css/css.min.js');
            await loadScript('https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.16/mode/htmlmixed/htmlmixed.min.js');

            let editorInstance = null;
            if (editorWindow.CodeMirror && textarea) {
                editorInstance = editorWindow.CodeMirror.fromTextArea(textarea, {
                    mode: 'htmlmixed',
                    theme: 'material-darker',
                    lineNumbers: true,
                    lineWrapping: true
                });
                editorInstance.setSize('100%', '100%');
            }

            const toTokenName = (value) => (value || '').replace(/[^a-zA-Z0-9]/g, '');
            const isImageColumn = (value) => /(?:image|img|photo|picture|pic|avatar|logo)/i.test(value || '');
            const insertToken = (token) => {
                if (editorInstance) {
                    editorInstance.replaceSelection(token);
                    editorInstance.focus();
                    return;
                }
                if (textarea) {
                    const start = textarea.selectionStart || 0;
                    const end = textarea.selectionEnd || 0;
                    const current = textarea.value || '';
                    textarea.value = current.slice(0, start) + token + current.slice(end);
                    textarea.selectionStart = textarea.selectionEnd = start + token.length;
                    textarea.focus();
                }
            };

            let activeCategory = 'all';
            const applyTokenFilters = () => {
                if (!repeaterList) return;
                const term = (repeaterSearch?.value || '').trim().toLowerCase();
                const nodes = repeaterList.querySelectorAll('[data-category]');
                nodes.forEach((node) => {
                    const category = (node.getAttribute('data-category') || 'all').toLowerCase();
                    const text = (node.textContent || '').toLowerCase();
                    const showCategory = activeCategory === 'all' || category === activeCategory;
                    const showText = !term || text.includes(term);
                    node.style.display = showCategory && showText ? '' : 'none';
                });
            };
            repeaterTabs.forEach((btn) => {
                btn.addEventListener('click', () => {
                    activeCategory = btn.getAttribute('data-category') || 'all';
                    repeaterTabs.forEach((item) => item.classList.toggle('active', item === btn));
                    applyTokenFilters();
                });
            });
            repeaterSearch?.addEventListener('input', applyTokenFilters);

            if (repeaterList) {
                repeaterList.innerHTML = '';
                const tablesToRender = await getApplicationTables();
                const querySelectors = await getQuerySelectors();
                const subTemplates = await getSubTemplates();
                const generalControls = [
                    { label: 'Current User', token: '<CurrentUser>' },
                    { label: 'Today Date', token: '<TodayDate>' },
                    { label: 'Current Time', token: '<CurrentTime>' },
                    { label: 'Company Name', token: '<CompanyName>' },
                    { label: 'Project Name', token: '<ProjectName>' },
                    { label: 'Current URL', token: '<CurrentUrl>' }
                ];

                const generalLabel = doc.createElement('div');
                generalLabel.className = 'group-label';
                generalLabel.setAttribute('data-category', 'general');
                generalLabel.textContent = 'General Controls';
                repeaterList.appendChild(generalLabel);

                const generalSection = doc.createElement('div');
                generalSection.className = 'app-section open';
                generalSection.setAttribute('data-category', 'general');
                const generalHeader = doc.createElement('button');
                generalHeader.type = 'button';
                generalHeader.className = 'app-header';
                generalHeader.innerHTML = '<div>General Controls</div><span>System</span>';
                const generalBody = doc.createElement('div');
                generalBody.className = 'app-body';
                generalControls.forEach((control) => {
                    const btn = doc.createElement('button');
                    btn.type = 'button';
                    btn.className = 'token-btn';
                    btn.textContent = control.label;
                    btn.addEventListener('click', () => insertToken(control.token));
                    generalBody.appendChild(btn);
                });
                generalHeader.addEventListener('click', () => {
                    generalSection.classList.toggle('open');
                });
                generalSection.appendChild(generalHeader);
                generalSection.appendChild(generalBody);
                repeaterList.appendChild(generalSection);

                if (querySelectors.length) {
                    const label = doc.createElement('div');
                    label.className = 'group-label';
                    label.setAttribute('data-category', 'fields');
                    label.textContent = 'Fields Controls';
                    repeaterList.appendChild(label);
                }
                querySelectors.forEach((query) => {
                    const section = doc.createElement('div');
                    section.className = 'app-section';
                    section.setAttribute('data-category', 'fields');
                    const header = doc.createElement('button');
                    header.type = 'button';
                    header.className = 'app-header';
                    header.innerHTML = `<div>${query.name}</div><span>${query.dguidToken}</span>`;
                    const body = doc.createElement('div');
                    body.className = 'app-body';

                    const addTokenButton = (label, token) => {
                        const btn = doc.createElement('button');
                        btn.type = 'button';
                        btn.className = 'token-btn';
                        btn.textContent = label;
                        btn.addEventListener('click', () => insertToken(token));
                        body.appendChild(btn);
                    };

                    addTokenButton('Opening Repeater', `<Repeater-${query.dguidToken}>`);
                    if ((query.columns || []).length === 0 || (query.columns || []).includes('*')) {
                        addTokenButton('All Columns', `<Repeater-${query.dguidToken}-AllColumns>`);
                    } else {
                        (query.columns || []).forEach((col) => {
                            const tokenName = toTokenName(col);
                            if (!tokenName) return;
                            addTokenButton(col, `<Repeater-${query.dguidToken}-${tokenName}>`);
                            if (isImageColumn(col)) {
                                addTokenButton(`${col} <img>`, `<img src="<Repeater-${query.dguidToken}-${tokenName}>" alt="${col}">`);
                            }
                        });
                    }
                    addTokenButton('Closing Repeater', `<Repeater-${query.dguidToken}/>`);

                    header.addEventListener('click', () => {
                        section.classList.toggle('open');
                    });

                    section.appendChild(header);
                    section.appendChild(body);
                    repeaterList.appendChild(section);
                });

                if (subTemplates.length) {
                    const label = doc.createElement('div');
                    label.className = 'group-label';
                    label.setAttribute('data-category', 'shortcodes');
                    label.textContent = 'Fields Controls Shortcodes';
                    repeaterList.appendChild(label);
                }

                subTemplates.forEach((sub) => {
                    const section = doc.createElement('div');
                    section.className = 'app-section open';
                    section.setAttribute('data-category', 'shortcodes');
                    const header = doc.createElement('button');
                    header.type = 'button';
                    header.className = 'app-header';
                    header.innerHTML = `<div>${sub.name}</div><span>${sub.dguidToken}</span>`;
                    const body = doc.createElement('div');
                    body.className = 'app-body';

                    const btn = doc.createElement('button');
                    btn.type = 'button';
                    btn.className = 'token-btn';
                    btn.textContent = 'Insert Sub Templete';
                    btn.addEventListener('click', () => insertToken(`<SubTemplete-${sub.dguidToken}>`));
                    body.appendChild(btn);

                    header.addEventListener('click', () => {
                        section.classList.toggle('open');
                    });

                    section.appendChild(header);
                    section.appendChild(body);
                    repeaterList.appendChild(section);
                });

                if (tablesToRender.length) {
                    const label = doc.createElement('div');
                    label.className = 'group-label';
                    label.setAttribute('data-category', 'fields');
                    label.textContent = 'Application Fields';
                    repeaterList.appendChild(label);
                }

                tablesToRender.forEach((table) => {
                    const section = doc.createElement('div');
                    section.className = 'app-section';
                    section.setAttribute('data-category', 'fields');
                    const header = doc.createElement('button');
                    header.type = 'button';
                    header.className = 'app-header';
                    header.innerHTML = `<div>${table.tableName}</div><span>${table.dguidToken}</span>`;
                    const body = doc.createElement('div');
                    body.className = 'app-body';

                    const addTokenButton = (label, token) => {
                        const btn = doc.createElement('button');
                        btn.type = 'button';
                        btn.className = 'token-btn';
                        btn.textContent = label;
                        btn.addEventListener('click', () => insertToken(token));
                        body.appendChild(btn);
                    };

                    addTokenButton('Opening Repeater', `<Repeater-${table.dguidToken}>`);

                    (table.columns || []).forEach((col) => {
                        const tokenName = toTokenName(col);
                        if (!tokenName) return;
                        addTokenButton(col, `<Repeater-${table.dguidToken}-${tokenName}>`);
                        if (isImageColumn(col)) {
                            addTokenButton(`${col} <img>`, `<img src="<Repeater-${table.dguidToken}-${tokenName}>" alt="${col}">`);
                        }
                    });

                    addTokenButton('Closing Repeater', `<Repeater-${table.dguidToken}/>`);

                    header.addEventListener('click', () => {
                        section.classList.toggle('open');
                    });

                    section.appendChild(header);
                    section.appendChild(body);
                    repeaterList.appendChild(section);
                });

                applyTokenFilters();
            }

            submitBtn?.addEventListener('click', () => {
                if (viewerTemplate) {
                    viewerTemplate.value = editorInstance ? editorInstance.getValue() : (textarea?.value || '');
                }
                editorWindow?.close();
            });
            cancelBtn?.addEventListener('click', () => editorWindow?.close());
        };
        openEditor?.addEventListener('click', () => {
            openEditorPopup();
        });

        saveViewer?.addEventListener('click', async () => {
            if (!canManage) return;
            const nameValue = viewerName?.value?.trim() || '';
            const typeValue = viewerType?.value?.trim() || '';
            const templateValue = viewerTemplate?.value?.trim() || '';
            const dguidValue = dguidDisplay?.textContent?.trim() || '';
            if (!nameValue || !typeValue || !templateValue) {
                setStatus('Please provide name, viewer type and templete viewer.', true);
                return;
            }
            const isEdit = !!(viewerId?.value);
            setStatus(isEdit ? 'Updating record...' : 'Creating record...');
            saveViewer.disabled = true;
            try {
                const res = await fetch(`/Tools/TempleteViewer?handler=${isEdit ? 'Update' : 'Create'}`, {
                    method: 'POST',
                    credentials: 'include',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': csrfToken
                    },
                    body: JSON.stringify({
                        id: viewerId?.value || 0,
                        dguid: !isEdit ? dguidValue : undefined,
                        name: nameValue,
                        viewerType: typeValue,
                        templateText: templateValue
                    })
                });
                if (res.redirected) {
                    window.location.href = res.url;
                    return;
                }
                const data = await res.json();
                if (!res.ok || !data?.success) {
                    setStatus(data?.message || 'Unable to save record.', true);
                    return;
                }
                setStatus(isEdit ? 'Record updated.' : 'Record created.');
                window.location.reload();
            } catch (err) {
                setStatus('Unable to save record.', true);
            } finally {
                saveViewer.disabled = false;
            }
        });

        const loadViewerIntoDrawer = (viewer) => {
            if (!viewer) return false;
            if (viewerId) viewerId.value = viewer.id || '';
            if (viewerName) viewerName.value = viewer.name || '';
            if (viewerType) viewerType.value = viewer.viewerType || '';
            if (viewerTemplate) viewerTemplate.value = viewer.templateText || '';
            if (idDisplay) idDisplay.textContent = viewer.id || '1';
            if (dguidDisplay) dguidDisplay.textContent = viewer.dguid || 'Auto';
            if (drawerTitle) drawerTitle.textContent = 'Edit Viewer Record';
            if (drawerSubtitle) drawerSubtitle.textContent = 'Update the templete viewer details.';
            if (saveViewer) saveViewer.textContent = 'Save Changes';
            setStatus('');
            showDrawer(true);
            return true;
        };

        document.querySelectorAll('.edit-viewer').forEach((button) => {
            button.addEventListener('click', () => {
                const id = button.getAttribute('data-viewer-id');
                const viewer = viewersData.find(item => (item.id || '').toString() === (id || ''));
                loadViewerIntoDrawer(viewer);
            });
        });

        document.querySelectorAll('.delete-viewer').forEach((button) => {
            button.addEventListener('click', () => {
                deleteViewerId = button.getAttribute('data-viewer-id');
                showConfirm(true);
            });
        });

        cancelDelete?.addEventListener('click', () => showConfirm(false));
        confirmModal?.querySelector('.drawer-backdrop')?.addEventListener('click', () => showConfirm(false));
        confirmDelete?.addEventListener('click', async () => {
            if (!deleteViewerId) return;
            confirmDelete.disabled = true;
            try {
                const res = await fetch('/Tools/TempleteViewer?handler=Delete', {
                    method: 'POST',
                    credentials: 'include',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': csrfToken
                    },
                    body: JSON.stringify({ id: Number(deleteViewerId) })
                });
                if (res.redirected) {
                    window.location.href = res.url;
                    return;
                }
                const data = await res.json();
                if (!res.ok || !data?.success) {
                    setStatus(data?.message || 'Unable to delete record.', true);
                    return;
                }
                window.location.reload();
            } catch (err) {
                setStatus('Unable to delete record.', true);
            } finally {
                confirmDelete.disabled = false;
                showConfirm(false);
                deleteViewerId = null;
            }
        });

        // Deep-link support: /Tools/TempleteViewer?editId=123&openEditor=1
        const viewerQueryParams = new URLSearchParams(window.location.search);
        const editIdParam = (viewerQueryParams.get('editId') || '').trim();
        const openEditorParam = (viewerQueryParams.get('openEditor') || '').trim().toLowerCase();
        const shouldAutoOpenEditor = openEditorParam === '1' || openEditorParam === 'true' || openEditorParam === 'yes';
        if (editIdParam) {
            const viewer = viewersData.find(item => (item.id || '').toString() === editIdParam);
            if (loadViewerIntoDrawer(viewer) && shouldAutoOpenEditor) {
                setTimeout(() => {
                    openEditorPopup(true);
                }, 60);
            }
        }

        const applyFilters = () => {
            const term = (viewerSearch?.value || '').trim().toLowerCase();
            const filtered = tableRows.filter((row) => {
                if (!term) return true;
                const searchValue = viewerSearchMap.get(row.dataset.viewerId || '') || '';
                return searchValue.includes(term);
            });

            const totalPages = Math.max(1, Math.ceil(filtered.length / pageSize));
            if (currentPage > totalPages) currentPage = totalPages;

            tableRows.forEach(row => row.style.display = 'none');
            const start = (currentPage - 1) * pageSize;
            const pageItems = filtered.slice(start, start + pageSize);
            pageItems.forEach(row => row.style.display = '');

            if (viewerPagination) {
                viewerPagination.style.display = filtered.length > pageSize ? 'flex' : 'none';
            }
            if (pageInfo) {
                pageInfo.textContent = `Page ${currentPage} of ${totalPages}`;
            }
            if (prevPage) prevPage.disabled = currentPage <= 1;
            if (nextPage) nextPage.disabled = currentPage >= totalPages;
        };

        viewerSearch?.addEventListener('input', () => {
            currentPage = 1;
            applyFilters();
        });

        prevPage?.addEventListener('click', () => {
            currentPage = Math.max(1, currentPage - 1);
            applyFilters();
        });

        nextPage?.addEventListener('click', () => {
            currentPage += 1;
            applyFilters();
        });

        applyFilters();
    </script>
