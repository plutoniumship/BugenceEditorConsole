        .tool-field input[type="color"] { width: 26px; height: 26px; border: none; background: transparent; padding: 0; }
        .tool-field input[type="checkbox"] { accent-color: var(--accent); }

        .zoom-cluster {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 6px 10px;
            border-radius: 12px;
            border: 1px solid var(--border);
