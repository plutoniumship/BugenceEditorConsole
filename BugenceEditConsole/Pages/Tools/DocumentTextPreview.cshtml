            font-size: 0.7rem;
            letter-spacing: 0.14em;
            text-transform: uppercase;
            color: var(--muted);
            border-bottom: 1px solid var(--border);
            background: rgba(255,255,255,0.02);
            font-weight: 700;
        }
        .layer-stack {
            padding: 10px;
            display: flex;
            flex-direction: column;
            gap: 8px;
            overflow-y: auto;
        }
        .layer-item {
            padding: 8px 10px;
            border-radius: 10px;
            border: 1px solid transparent;
            background: rgba(255,255,255,0.04);
            color: var(--muted);
            font-size: 0.8rem;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        .layer-item:hover { border-color: rgba(6,182,212,0.4); color: white; }
        .layer-item.active { border-color: var(--accent); color: white; background: rgba(6,182,212,0.12); }
        .text-layer {
            position: absolute;
            min-width: 40px;
            padding: 4px 6px;
            border-radius: 6px;
            border: 1px dashed rgba(6,182,212,0.6);
            color: #111827;
            font-weight: 600;
            line-height: 1.2;
            cursor: text;
            user-select: text;
            background: transparent;
            font-family: 'Satoshi', sans-serif;
            white-space: pre-wrap;
        }
        .text-layer[data-kind="ocr"] {
            border-color: rgba(6,182,212,0.35);
            color: rgba(17,24,39,0.75);
            background: rgba(6,182,212,0.06);
        }
        .text-layer[data-kind="ocr"].active {
            color: #111827;
            border-color: var(--accent);
        }
        .overlay-layer.hide-ocr .text-layer[data-kind="ocr"] { display: none; }
        .text-layer.active { border-color: var(--accent); box-shadow: 0 0 0 2px rgba(6,182,212,0.2); }

        .preview-actions { margin-top: 12px; display: flex; flex-wrap: wrap; gap: 12px; justify-content: space-between; align-items: center; }
        .page-nav { display: inline-flex; align-items: center; gap: 8px; }
        .page-indicator { font-size: 0.85rem; color: var(--muted); }
        .preview-placeholder {
            text-align: center;
            color: var(--muted);
            max-width: 260px;
        }
        .preview-placeholder i { font-size: 2rem; margin-bottom: 12px; color: rgba(6,182,212,0.6); }
        .preview-file-chip {
            margin-top: 12px;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 6px 10px;
            border-radius: 999px;
            background: rgba(255,255,255,0.06);
            border: 1px solid var(--border);
            font-size: 0.8rem;
        }

        .editor-panel { margin-top: 24px; }
        .editor-actions { display: flex; flex-wrap: wrap; gap: 10px; }
        .editor-body { margin-top: 12px; }
        textarea#textEditor {
            width: 100%;
            min-height: 320px;
            border-radius: 16px;
            border: 1px solid var(--border);
            background: #0c0c0f;
            padding: 16px;
            color: white;
            font-family: 'Satoshi', sans-serif;
            font-size: 0.95rem;
            line-height: 1.5;
            resize: vertical;
        }
        .editor-footer { display: flex; flex-wrap: wrap; justify-content: space-between; gap: 12px; margin-top: 14px; color: var(--muted); font-size: 0.85rem; }
        .editor-stat { display: inline-flex; gap: 8px; align-items: center; }
        .editor-stat strong { color: white; }
        .draft-status { color: var(--muted); }

        .note { color: var(--muted); font-size: 0.8rem; margin-top: 8px; }
        .visual-note { margin-top: 6px; }

        @@keyframes floatIn {
            from { opacity: 0; transform: translateY(8px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @@media (max-width: 1200px) {
            .studio-shell { grid-template-columns: 56px 1fr; }
            .layer-panel { display: none; }
        }
        @@media (max-width: 900px) {
            .studio-shell { grid-template-columns: 1fr; }
            .tool-rail { flex-direction: row; justify-content: center; }
            .canvas-viewport { min-height: 420px; }
        }
        @@media (max-width: 1100px) {
            .grid-two { grid-template-columns: 1fr; }
        }
        @@media (max-width: 720px) {
            main { padding: 24px; }
            .shell { grid-template-columns: 1fr; }
            aside { display: none; }
        }
    </style>
}

