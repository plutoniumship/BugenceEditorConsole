@page
@model BugenceEditConsole.Pages.ProjectHub.IndexModel
@{
    Layout = null;
    var selected = Model.Selected;
    var primaryZone = string.IsNullOrWhiteSpace(Model.PrimaryZone) ? "bugence.app" : Model.PrimaryZone.Trim('.');
    var domain = selected?.Slug is null ? "" : $"{selected.Slug}.{primaryZone}".Trim('.');
    var pid = selected?.Id ?? 0;

    var fileCount = Model.ProjectFiles.Count;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@(selected?.Name ?? "Project Hub") | Bugence</title>
    <link href="https://api.fontshare.com/v2/css?f[]=satoshi@900,700,500,400,300&f[]=cabinet-grotesk@800,500,700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --bg: #050505;
            --surface: #0a0a0a;
            --border: rgba(255,255,255,0.08);
            --text: #ffffff;
            --muted: #a1a1aa;
            --accent: #06b6d4;
            --success: #10b981;
            --warning: #f59e0b;
            --font-head: 'Cabinet Grotesk', sans-serif;
            --font-body: 'Satoshi', sans-serif;
        }

        * {
            box-sizing: border-box;
            outline: none;
        }

        body {
            margin: 0;
            background: var(--bg);
            color: var(--text);
            font-family: var(--font-body);
            height: 100vh;
            display: flex;
            overflow: hidden;
        }

        .shell {
            display: grid;
            grid-template-columns: 260px 1fr;
            width: 100%;
            height: 100%;
        }

        .sidebar-legacy {
            background: var(--bg);
            border-right: 1px solid var(--border);
            padding: 24px;
            display: flex;
            flex-direction: column;
            z-index: 10;
        }

        .brand {
            display: flex;
            align-items: center;
            gap: 10px;
            font-family: var(--font-head);
            font-weight: 800;
            font-size: 1.2rem;
            text-decoration: none;
            color: white;
            margin-bottom: 32px;
        }

        .back {
            display: flex;
            align-items: center;
            gap: 8px;
            color: var(--muted);
            text-decoration: none;
            margin-bottom: 20px;
            font-size: 0.9rem;
            transition: 0.2s;
        }

            .back:hover {
                color: white;
                transform: translateX(-4px);
            }

        .menu-title {
            margin: 20px 0 10px 12px;
            font-size: 0.7rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: #555;
            font-weight: 700;
        }

        .nav-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 10px 14px;
            border-radius: 12px;
            color: var(--muted);
            text-decoration: none;
            font-weight: 600;
            font-size: 0.95rem;
            margin-bottom: 2px;
            transition: all 0.2s;
        }

            .nav-item:hover {
                background: rgba(255,255,255,0.03);
                color: white;
            }

            .nav-item.active {
                background: rgba(6,182,212,0.1);
                color: var(--accent);
            }

        main {
            padding: 40px 50px;
            overflow-y: auto;
            background: radial-gradient(circle at 0% 0%, rgba(6,182,212,0.03), transparent 40%), var(--bg);
            position: relative;
        }

        .top-row {
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
            gap: 20px;
            margin-bottom: 30px;
        }

        .project-picker {
            appearance: none;
            background: var(--surface);
            color: white;
            border: 1px solid var(--border);
            padding: 10px 35px 10px 15px;
            border-radius: 10px;
            font-weight: 700;
            min-width: 200px;
            cursor: pointer;
        }

        .title {
            font-family: var(--font-head);
            font-size: 2.5rem;
            margin: 10px 0 5px;
            font-weight: 700;
            letter-spacing: -1px;
        }

        .subline {
            margin: 0;
            color: var(--muted);
            font-size: 0.95rem;
        }

        .domain-link {
            color: var(--accent);
            text-decoration: none;
            font-weight: 600;
        }

        .controls-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 1px solid var(--border);
            gap: 16px;
            flex-wrap: wrap;
        }

        .search-input {
            width: 300px;
            background: var(--surface);
            border: 1px solid var(--border);
            padding: 10px 10px 10px 35px;
            border-radius: 8px;
            color: white;
            transition: 0.2s;
        }

            .search-input:focus {
                border-color: var(--accent);
            }
        .file-tabs { display: flex; gap: 10px; flex-wrap: wrap; }
        .file-tab {
            background: var(--surface);
            border: 1px solid var(--border);
            color: var(--muted);
            padding: 8px 14px;
            border-radius: 999px;
            font-weight: 700;
            font-size: 0.8rem;
            cursor: pointer;
            transition: 0.2s;
        }
        .file-tab:hover { color: white; border-color: rgba(255,255,255,0.2); }
        .file-tab.active { background: rgba(6,182,212,0.12); color: var(--accent); border-color: rgba(6,182,212,0.4); }

        .cards-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
            gap: 24px;
        }

        .page-card {
            background: var(--surface);
            border: 1px solid var(--border);
            border-radius: 16px;
            overflow: hidden;
            transition: 0.3s;
            position: relative;
            display: flex;
            flex-direction: column;
        }

            .page-card:hover {
                transform: translateY(-6px);
                border-color: rgba(255,255,255,0.15);
                box-shadow: 0 20px 40px -10px rgba(0,0,0,0.5);
            }

        .card-preview {
            height: 140px;
            background: #0f0f0f;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            border-bottom: 1px solid var(--border);
        }

        .card-body {
            padding: 20px;
        }

        .page-title {
            font-weight: 700;
            font-size: 1.1rem;
            color: white;
            margin: 0 0 5px 0;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .page-size {
            font-size: 0.8rem;
            color: var(--muted);
            font-family: monospace;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 5px;
            padding: 4px 10px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.7rem;
            text-transform: uppercase;
            margin-top: 15px;
        }

        .status-dot {
            width: 6px;
            height: 6px;
            border-radius: 50%;
        }

        .status-published {
            background: rgba(16, 185, 129, 0.1);
            color: var(--success);
            border: 1px solid rgba(16, 185, 129, 0.2);
        }

            .status-published .status-dot {
                background: var(--success);
            }

        .status-draft {
            background: rgba(6, 182, 212, 0.1);
            color: var(--accent);
            border: 1px solid rgba(6, 182, 212, 0.2);
        }

            .status-draft .status-dot {
                background: var(--accent);
            }

        .edit-overlay {
            position: absolute;
            inset: 0;
            background: rgba(0,0,0,0.5);
            backdrop-filter: blur(4px);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: 0.2s;
        }

        .page-card:hover .edit-overlay {
            opacity: 1;
        }

        .btn-edit {
            background: white;
            color: black;
            border: none;
            padding: 10px 24px;
            border-radius: 30px;
            font-weight: 700;
            text-decoration: none;
            transform: translateY(10px);
            transition: 0.2s;
        }

        .page-card:hover .btn-edit {
            transform: translateY(0);
        }

        .btn-primary {
            background: var(--accent);
            color: #000;
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: 700;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        @@media (max-width: 1024px) {
            body {
                overflow-x: hidden;
                overflow-y: auto;
                min-height: 100dvh;
                display: block;
            }
            .shell {
                grid-template-columns: 1fr;
                min-height: 100dvh;
            }
            main {
                padding: 12px 10px 20px;
            }
            .top-row {
                flex-direction: column;
                align-items: flex-start;
                margin-top: 54px;
                margin-bottom: 18px;
            }
            .controls-bar {
                gap: 10px;
                margin-bottom: 18px;
            }
            .search-input {
                width: 100%;
            }
        }
    </style>
</head>
<body>

    <div class="shell">
        @await Html.PartialAsync("_ProjectHubSidebar")

        <main>
            @await Html.PartialAsync("_DashboardTopbar")
            <div class="top-row">
                <div>
                    <div style="position:relative; display:inline-block; margin-bottom:10px;">
                        <select id="projectPicker" class="project-picker">
                            @foreach (var p in Model.Projects)
                            {
                                <option value="@p.Id" selected="@(Model.Selected?.Id == p.Id)">@p.Name</option>
                            }
                        </select>
                        <i class="fa-solid fa-chevron-down" style="position:absolute; right:15px; top:50%; transform:translateY(-50%); color:#666; pointer-events:none; font-size:0.8rem;"></i>
                    </div>
                    <h1 class="title" id="projTitle">@selected?.Name</h1>
                    <p class="subline">
                        <span style="color:#666;">Source:</span>
                        <span style="color:var(--accent); font-family:monospace;">@Model.ResolvedPath</span>
                    </p>
                </div>
                <div>
                    <a class="btn-primary" href="#"><i class="fa-solid fa-plus"></i> Upload File</a>
                </div>
            </div>

            <div class="controls-bar">
                <div style="position:relative;">
                    <i class="fa-solid fa-search" style="position:absolute; left:12px; top:12px; color:#666;"></i>
                    <input type="text" class="search-input" id="fileSearch" placeholder="Search files..." onkeyup="filterFiles()">
                </div>
                <div class="file-tabs" id="fileTabs">
                    <button class="file-tab active" type="button" data-filter="all">All Files</button>
                    <button class="file-tab" type="button" data-filter="html">HTML</button>
                    <button class="file-tab" type="button" data-filter="css">CSS</button>
                    <button class="file-tab" type="button" data-filter="js">JavaScript</button>
                    <button class="file-tab" type="button" data-filter="asset">Assets</button>
                </div>
            </div>

            <div class="cards-grid" id="filesGrid">
                @foreach (var f in Model.ProjectFiles)
                {
                    var isHtml = f.Extension == "HTML" || f.Extension == "HTM";
                    var statusClass = f.Status == "Published" ? "status-published" : "status-draft";
                    var iconClass = isHtml ? "fa-file-code" : (f.Extension == "CSS" ? "fa-css3" : "fa-js");
                    var iconColor = isHtml ? "#e34f26" : (f.Extension == "CSS" ? "#2965f1" : "#f7df1e");
                    var fileType = isHtml ? "html" : (f.Extension == "CSS" ? "css" : (f.Extension == "JS" ? "js" : "asset"));
                    var overlayLabel = isHtml ? "Open in Editor" : "Edit in IDE";
                    var overlayLink = isHtml ? $"/Editor?projectId={pid}&file={Uri.EscapeDataString(f.RelativePath)}" : $"/ProjectHub/CustomCode?projectId={pid}";

                    <div class="page-card" data-name="@f.FileName.ToLower()" data-type="@fileType">
                        <div class="card-preview">
                            <i class="fa-brands @iconClass" style="font-size:3.5rem; color:@iconColor;"></i>
                            <div class="edit-overlay">
                                <a class="btn-edit" href="@overlayLink" target="_blank" rel="noopener">@overlayLabel</a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="page-title" title="@f.FileName">@f.FileName</div>
                            <div class="page-size">@f.Size â€¢ @f.LastModified.ToString("MMM dd, HH:mm")</div>
                            <div class="status-badge @statusClass"><div class="status-dot"></div> @f.Status</div>
                        </div>
                    </div>
                }

                @if (Model.ProjectFiles.Count == 0)
                {
                    <div style="grid-column: 1/-1; text-align: center; padding: 60px; color: #666; border: 1px dashed var(--border); border-radius: 16px;">
                        <i class="fa-solid fa-folder-open" style="font-size: 3rem; margin-bottom: 15px;"></i>
                        <p>No project files found.</p>
                        <p style="font-size:0.8rem; margin-top:5px; color:#555;">Checked path: @Model.ResolvedPath</p>
                    </div>
                }
            </div>
        </main>
    </div>

    <script>
        const picker = document.getElementById("projectPicker");
        picker?.addEventListener("change", () => {
            window.location.href = `/ProjectHub/Index?projectId=${picker.value}`;
        });

        let activeType = "all";
        document.querySelectorAll(".file-tab").forEach(tab => {
            tab.addEventListener("click", () => {
                document.querySelectorAll(".file-tab").forEach(t => t.classList.remove("active"));
                tab.classList.add("active");
                activeType = tab.getAttribute("data-filter") || "all";
                filterFiles();
            });
        });

        function filterFiles() {
            const input = document.getElementById('fileSearch').value.toLowerCase();
            const cards = document.querySelectorAll('.page-card');
            cards.forEach(card => {
                const name = card.getAttribute('data-name');
                const type = card.getAttribute('data-type') || "asset";
                const matchesType = activeType === "all" || type === activeType;
                const matchesName = name.includes(input);
                card.style.display = (matchesType && matchesName) ? 'flex' : 'none';
            });
        }
    </script>
</body>
</html>
