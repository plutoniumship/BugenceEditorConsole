@page
@model BugenceEditConsole.Pages.Modules.AutomationStudioModel
@{
    ViewData["Title"] = "Automation Studio";
    ViewData["BodyClass"] = "bg-canvas profile-dark preview-dark";
}

<section class="module-hub">
    <div class="dashboard-card module-hub__hero tilt on-white card-surface">
        <span class="shine" aria-hidden="true"></span>
        <div class="dashboard-card__inner module-hub__header">
            <div class="module-hub__icon">
                <span class="fa-solid fa-wand-magic-sparkles" aria-hidden="true"></span>
            </div>
            <div>
                <div class="pill pill--light">Automation Studio</div>
                <h1 class="font-display text-4xl font-black text-ink">Orchestrate publish automation flows.</h1>
                <p class="text-sm text-ink/70 max-w-2xl">
                    Sequence preflight checks, approvals, and deploy tasks from one responsive studio. Automation Studio
                    is preparing to help you script repeatable launch routines with confidence.
                </p>
            </div>
        </div>
    </div>
    <div class="module-hub__content">
        <div class="module-hub__card tilt on-white card-surface">
            <span class="shine" aria-hidden="true"></span>
            <h2>Coming soon</h2>
            <p>
                We are laying down the workflow engine, task routing, and cross-environment deployments. Expect
                blueprint presets, scheduled publishes, and launch confirmation summaries in an upcoming release.
            </p>
        </div>
        <div class="module-hub__card tilt on-white card-surface">
            <span class="shine" aria-hidden="true"></span>
            <h3>Planned capabilities</h3>
            <ul>
                <li>Reusable automation blueprints for multi-surface rollouts</li>
                <li>Role-aware approvals and sign-off tracking</li>
                <li>Activity timeline with launch health scoring</li>
            </ul>
        </div>
    </div>
</section>
