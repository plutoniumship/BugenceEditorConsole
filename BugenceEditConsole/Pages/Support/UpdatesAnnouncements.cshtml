@page
@model BugenceEditConsole.Pages.Support.UpdatesAnnouncementsModel

@{
    ViewData["Title"] = "UpdatesAnnouncements";
    ViewData["BodyClass"] = "page-support-updatesannouncements";
}

@section Head {
<style>
        /* --- CORE THEME --- */
        :root { 
            --bg: #020202; 
            --surface: #0a0a0a; 
            --surface-hover: #121212;
            --border: rgba(255,255,255,0.08); 
            --text: #e5e5e5; 
            --muted: #737373; 
            --accent: #06b6d4; 
            --accent-dim: rgba(6,182,212,0.1);
            --success: #10b981; 
            --warning: #f59e0b; 
            --danger: #ef4444; 
            --purple: #8b5cf6;
        }

        * { box-sizing: border-box; outline: none; scrollbar-width: thin; scrollbar-color: #333 transparent; }
        body { margin:0; background: var(--bg); color: var(--text); font-family: 'Satoshi', sans-serif; display:flex; height: 100vh; overflow: hidden; }

        /* --- LAYOUT SHELL --- */
        .shell { display:flex; width:100%; height:100%; }
        
        aside { 
            width: 260px; flex-shrink: 0; background: #050505; 
            border-right: 1px solid var(--border); padding: 24px; 
            display: flex; flex-direction: column; z-index: 20; 
        }
        
        main { 
            flex-grow: 1; padding: 0; overflow-y: auto; 
            background: radial-gradient(circle at 50% 0%, rgba(6,182,212,0.04), transparent 50%); 
            position: relative; 
        }

        .content-container { max-width: 1000px; margin: 0 auto; padding: 60px 40px; }

        /* --- SIDEBAR --- */
        .brand { font-family: 'Cabinet Grotesk', sans-serif; font-weight:800; font-size: 1.2rem; color:white; text-decoration:none; margin-bottom:40px; display:flex; gap:10px; align-items:center; letter-spacing: -0.5px; }
        .menu-label { font-size:0.7rem; color:#444; font-weight:700; margin:20px 0 8px 12px; text-transform:uppercase; letter-spacing:1px; }
        .nav-item { 
            padding:10px 14px; color:var(--muted); text-decoration:none; display:flex; gap:12px; align-items:center; 
            font-weight:600; border-radius:10px; margin-bottom:4px; transition:0.2s; font-size:0.9rem; 
        }
        .nav-item:hover { background: var(--surface-hover); color: white; }
        .nav-item.active { background: var(--surface-hover); color: white; border: 1px solid var(--border); }
        .nav-icon { width: 20px; text-align: center; }
        .dropdown-wrapper { position: relative; }
        .dropdown-menu {
            position: absolute; top: 120%; right: 0; width: 260px;
            background: #0c0c0c; border: 1px solid var(--border); border-radius: 16px;
            box-shadow: 0 10px 40px -10px rgba(0,0,0,0.8);
            opacity: 0; transform: translateY(-10px); pointer-events: none;
            transition: 0.2s cubic-bezier(0.16, 1, 0.3, 1); z-index: 100;
            overflow: hidden;
        }
        .dropdown-menu.top-open {
            top: auto;
            bottom: 120%;
            transform: translateY(10px);
        }
        .dropdown-menu.top-open.show {
            transform: translateY(0);
        }
        .dropdown-menu.show { opacity: 1; transform: translateY(0); pointer-events: auto; }
        .profile-dd { border-radius: 16px; }
        .profile-dd .dd-body { padding: 10px; display: flex; flex-direction: column; gap: 6px; }
        .profile-dd .profile-option {
            display: flex; align-items: center; gap: 10px;
            padding: 10px 12px; border-radius: 10px; text-decoration: none;
            color: #e5e7eb; font-weight: 600; transition: 0.2s;
            background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.06);
        }
        .profile-dd .profile-option:hover { background: rgba(255,255,255,0.06); color: white; border-color: rgba(255,255,255,0.2); }
        .profile-dd .profile-option i { width: 18px; text-align: center; color: var(--muted); }
        .profile-dd .profile-option:hover i { color: white; }
        .avatar-chip {
            display: flex; align-items: center; gap: 10px; background: rgba(255,255,255,0.03);
            border: 1px solid var(--border); border-radius: 14px; padding: 10px 12px;
            cursor: pointer; transition: 0.2s;
        }
        .avatar-chip:hover { background: rgba(255,255,255,0.06); border-color: rgba(255,255,255,0.2); }
        .avatar-dot { width: 36px; height: 36px; border-radius: 12px; background: var(--accent); color: black; font-weight: 800; display: grid; place-items: center; }
        .avatar-meta { display: flex; flex-direction: column; }

        /* --- HEADER --- */
        .header { text-align: center; margin-bottom: 60px; }
        .header h1 { font-family: 'Cabinet Grotesk', sans-serif; font-size: 3rem; margin: 0 0 10px; line-height: 1; }
        .header p { color: var(--muted); font-size: 1.1rem; max-width: 500px; margin: 0 auto; }
        .subscribe-btn { margin-top: 20px; background: rgba(255,255,255,0.05); color: white; border: 1px solid var(--border); padding: 8px 16px; border-radius: 20px; cursor: pointer; transition: 0.2s; font-size: 0.9rem; display: inline-flex; align-items: center; gap: 8px; }
        .subscribe-btn:hover { background: rgba(255,255,255,0.1); border-color: #666; }

        /* --- TIMELINE LAYOUT --- */
        .changelog-wrapper { display: grid; grid-template-columns: 200px 1fr; gap: 60px; position: relative; }
        
        /* Sticky Sidebar (Versions) */
        .version-nav { position: sticky; top: 20px; height: fit-content; display: flex; flex-direction: column; gap: 5px; }
        .v-link { 
            padding: 8px 12px; border-radius: 6px; color: var(--muted); text-decoration: none; 
            font-weight: 600; font-size: 0.9rem; transition: 0.2s; border-left: 2px solid transparent; 
        }
        .v-link:hover { color: white; background: rgba(255,255,255,0.02); }
        .v-link.active { color: var(--accent); border-left-color: var(--accent); background: var(--accent-dim); }

        /* Timeline Items */
        .timeline { position: relative; padding-left: 40px; border-left: 1px solid var(--border); }
        
        .log-entry { margin-bottom: 60px; position: relative; }
        
        /* Timeline Dot */
        .log-dot { 
            position: absolute; left: -46px; top: 5px; width: 12px; height: 12px; 
            background: var(--bg); border: 2px solid var(--muted); border-radius: 50%; z-index: 2; 
        }
        .log-entry:hover .log-dot { border-color: var(--accent); background: var(--accent); box-shadow: 0 0 10px var(--accent); }

        .log-date { font-size: 0.85rem; color: var(--muted); font-weight: 700; text-transform: uppercase; margin-bottom: 8px; letter-spacing: 1px; }
        
        .log-card { 
            background: var(--surface); border: 1px solid var(--border); border-radius: 16px; 
            padding: 30px; transition: 0.2s; position: relative; overflow: hidden;
        }
        .log-card:hover { border-color: rgba(255,255,255,0.15); transform: translateY(-2px); }

        .version-badge { 
            position: absolute; top: 20px; right: 20px; background: rgba(255,255,255,0.05); 
            padding: 4px 10px; border-radius: 6px; font-family: monospace; font-size: 0.8rem; 
            border: 1px solid var(--border); color: #ccc;
        }

        .log-title { font-size: 1.5rem; font-weight: 700; margin: 0 0 15px; color: white; }
        .log-desc { color: #aaa; line-height: 1.6; margin-bottom: 25px; }

        /* Change List */
        .changes-list { list-style: none; padding: 0; margin: 0; display: flex; flex-direction: column; gap: 12px; }
        .change-item { display: flex; gap: 15px; align-items: start; font-size: 0.95rem; line-height: 1.5; }
        
        /* Type Badges */
        .badge { 
            padding: 2px 8px; border-radius: 4px; font-size: 0.7rem; font-weight: 800; 
            text-transform: uppercase; min-width: 70px; text-align: center; margin-top: 3px;
        }
        .type-new { background: rgba(6,182,212,0.1); color: var(--accent); border: 1px solid rgba(6,182,212,0.2); }
        .type-fix { background: rgba(239,68,68,0.1); color: var(--danger); border: 1px solid rgba(239,68,68,0.2); }
        .type-imp { background: rgba(139,92,246,0.1); color: var(--purple); border: 1px solid rgba(139,92,246,0.2); }

        /* Media */
        .log-image { 
            width: 100%; height: 200px; background: #111; border-radius: 10px; 
            margin-bottom: 20px; border: 1px solid var(--border); display: grid; place-items: center; color: #333; font-size: 3rem;
        }
        
        /* Filter Bar */
        .filter-bar { display: flex; justify-content: center; gap: 10px; margin-bottom: 40px; }
        .filter-chip { 
            background: var(--surface); border: 1px solid var(--border); padding: 8px 16px; 
            border-radius: 20px; color: var(--muted); cursor: pointer; font-size: 0.85rem; font-weight: 600; transition: 0.2s; 
        }
        .filter-chip:hover { color: white; border-color: #444; }
        .filter-chip.active { background: white; color: black; border-color: white; }

        .hidden { display: none; }
    </style>
}

<div class="content-container">

                <div class="header">
                    <h1>System Updates</h1>
                    <p>Latest announcements, new features, and critical platform changes.</p>
                    <button class="subscribe-btn"><i class="fa-regular fa-envelope"></i> Subscribe to updates</button>
                </div>

                <div class="filter-bar">
                    <div class="filter-chip active" onclick="filterLogs('all', this)">All Updates</div>
                    <div class="filter-chip" onclick="filterLogs('new', this)">New Features</div>
                    <div class="filter-chip" onclick="filterLogs('imp', this)">Improvements</div>
                    <div class="filter-chip" onclick="filterLogs('fix', this)">Fixes</div>
                </div>

                <div class="changelog-wrapper">
                    
                    <div class="version-nav">
                        <a href="#v2-4" class="v-link active">v2.4.0 <span style="font-size:0.7rem; float:right; margin-top:2px;">Dec 15</span></a>
