@page
@model BugenceEditConsole.Pages.Support.ChangeLogModel
@{
    ViewData["Title"] = "Change Log";
    ViewData["BodyClass"] = "page-support-changelog";
}

@section Head {
<style>
    :root {
        --cl-bg: #020202;
        --cl-panel: rgba(8,8,8,0.95);
        --cl-panel-strong: rgba(4,4,4,0.98);
        --cl-border: rgba(255,255,255,0.08);
        --cl-text: #f5f7fa;
        --cl-muted: #8d97a5;
        --cl-cyan: #6ee7ff;
        --cl-gold: #f6c85f;
        --cl-green: #4ade80;
        --cl-red: #fb7185;
    }

    .cl-shell {
        max-width: 1660px;
        margin: 0 auto;
        display: grid;
        gap: 18px;
        padding-bottom: 24px;
    }

    .cl-hero {
        position: relative;
        overflow: hidden;
        border-radius: 28px;
        border: 1px solid rgba(255,255,255,0.12);
        background:
            radial-gradient(640px 280px at -5% -10%, rgba(110,231,255,0.16), transparent 56%),
            radial-gradient(500px 240px at 110% 0%, rgba(246,200,95,0.14), transparent 54%),
            linear-gradient(140deg, rgba(12,12,12,0.98), rgba(3,3,3,0.98));
        box-shadow: 0 36px 90px rgba(0,0,0,0.52);
        padding: 26px;
    }

    .cl-hero::after {
        content: "";
        position: absolute;
        inset: 0;
        background-image:
            linear-gradient(rgba(255,255,255,0.02) 1px, transparent 1px),
            linear-gradient(90deg, rgba(255,255,255,0.02) 1px, transparent 1px);
        background-size: 32px 32px;
        opacity: 0.18;
        pointer-events: none;
    }

    .cl-hero-inner {
        position: relative;
        z-index: 1;
        display: grid;
        grid-template-columns: minmax(0, 1.2fr) 360px;
        gap: 18px;
    }

    .cl-kicker {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 8px 14px;
        border-radius: 999px;
        border: 1px solid rgba(255,255,255,0.1);
        background: rgba(255,255,255,0.04);
        color: var(--cl-cyan);
        text-transform: uppercase;
        letter-spacing: 0.16em;
        font-size: 0.72rem;
        font-weight: 900;
    }

    .cl-title {
        margin: 14px 0 8px;
        font-family: "Cabinet Grotesk", sans-serif;
        font-size: clamp(2rem, 4vw, 4rem);
        line-height: 0.94;
        letter-spacing: -0.05em;
        color: var(--cl-text);
    }

    .cl-subtitle {
        margin: 0;
        max-width: 760px;
        color: var(--cl-muted);
        line-height: 1.7;
    }

    .cl-project-select {
        width: 100%;
        height: 50px;
        border-radius: 16px;
        border: 1px solid rgba(255,255,255,0.12);
        background: rgba(255,255,255,0.04);
        color: var(--cl-text);
        padding: 0 14px;
        font-size: 0.95rem;
    }

    .cl-summary-grid {
        display: grid;
        grid-template-columns: repeat(3, minmax(0, 1fr));
        gap: 12px;
        margin-top: 18px;
    }

    .cl-stat {
        border-radius: 20px;
        border: 1px solid rgba(255,255,255,0.08);
        background: rgba(255,255,255,0.03);
        padding: 16px;
    }

    .cl-stat-label {
        color: #7c8796;
        font-size: 0.72rem;
        text-transform: uppercase;
        letter-spacing: 0.12em;
        font-weight: 900;
    }

    .cl-stat-value {
        margin-top: 10px;
        font-size: 1.7rem;
        font-weight: 900;
        color: var(--cl-text);
    }

    .cl-command {
        border-radius: 22px;
        border: 1px solid rgba(255,255,255,0.1);
        background: linear-gradient(180deg, rgba(15,15,15,0.96), rgba(7,7,7,0.98));
        padding: 18px;
        display: grid;
        gap: 14px;
        align-content: start;
    }

    .cl-command h3 {
        margin: 0;
        font-size: 1rem;
        color: var(--cl-text);
        font-weight: 900;
    }

    .cl-command p {
        margin: 0;
        color: var(--cl-muted);
        font-size: 0.84rem;
        line-height: 1.6;
    }

    .cl-controls-panel {
        border-radius: 24px;
        border: 1px solid var(--cl-border);
        background: linear-gradient(180deg, var(--cl-panel), var(--cl-panel-strong));
        box-shadow: 0 18px 44px rgba(0,0,0,0.42);
        overflow: hidden;
    }

    .cl-controls-head {
        padding: 20px 20px 14px;
        border-bottom: 1px solid rgba(255,255,255,0.06);
        display: flex;
        justify-content: space-between;
        gap: 12px;
        align-items: end;
    }

    .cl-controls-title {
        margin: 0;
        color: var(--cl-text);
        font-size: 1rem;
        font-weight: 900;
    }

    .cl-controls-sub {
        margin: 6px 0 0;
        color: var(--cl-muted);
        font-size: 0.84rem;
    }

    .cl-controls-body {
        padding: 18px 20px 20px;
        display: grid;
        gap: 14px;
    }

    .cl-filter-grid {
        display: grid;
        grid-template-columns: 1.3fr repeat(3, minmax(180px, 1fr)) auto;
        gap: 12px;
    }

    .cl-search,
    .cl-filter,
    .cl-page-size {
        width: 100%;
        height: 48px;
        border-radius: 16px;
        border: 1px solid rgba(255,255,255,0.12);
        background: rgba(255,255,255,0.03);
        color: var(--cl-text);
        padding: 0 14px;
    }

    .cl-btn {
        height: 48px;
        padding: 0 16px;
        border-radius: 16px;
        border: 1px solid rgba(255,255,255,0.12);
        background: rgba(255,255,255,0.04);
        color: var(--cl-text);
        font-weight: 900;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        cursor: pointer;
    }

    .cl-btn:hover {
        border-color: rgba(255,255,255,0.22);
    }

    .cl-meta-row {
        display: flex;
        justify-content: space-between;
        gap: 12px;
        align-items: center;
        flex-wrap: wrap;
        color: var(--cl-muted);
        font-size: 0.86rem;
    }

    .cl-feed {
        position: relative;
        padding-left: 26px;
        display: grid;
        gap: 18px;
    }

    .cl-feed::before {
        content: "";
        position: absolute;
        left: 10px;
        top: 6px;
        bottom: 6px;
        width: 1px;
        background: linear-gradient(180deg, rgba(110,231,255,0.22), rgba(255,255,255,0.06));
    }

    .cl-date-group {
        display: grid;
        gap: 12px;
    }

    .cl-date-head {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .cl-date-pill {
        padding: 7px 12px;
        border-radius: 999px;
        border: 1px solid rgba(255,255,255,0.1);
        background: rgba(255,255,255,0.04);
        color: #dbe4ee;
        font-size: 0.76rem;
        font-weight: 900;
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }

    .cl-date-line {
        flex: 1;
        height: 1px;
        background: rgba(255,255,255,0.08);
    }

    .cl-entry {
        position: relative;
        border-radius: 22px;
        border: 1px solid rgba(255,255,255,0.08);
        background:
            radial-gradient(260px 100px at 100% 0%, rgba(255,255,255,0.03), transparent 60%),
            linear-gradient(180deg, rgba(10,10,10,0.96), rgba(6,6,6,0.98));
        padding: 18px;
        margin-left: 6px;
        box-shadow: 0 16px 38px rgba(0,0,0,0.34);
    }

    .cl-entry::before {
        content: "";
        position: absolute;
        left: -23px;
        top: 20px;
        width: 11px;
        height: 11px;
        border-radius: 50%;
        border: 2px solid rgba(255,255,255,0.14);
        background: #020202;
    }

    .type-code.cl-entry::before { border-color: rgba(110,231,255,0.6); background: rgba(110,231,255,0.3); }
    .type-config.cl-entry::before { border-color: rgba(246,200,95,0.6); background: rgba(246,200,95,0.3); }
    .type-delete.cl-entry::before { border-color: rgba(251,113,133,0.6); background: rgba(251,113,133,0.3); }

    .cl-entry-head {
        display: flex;
        justify-content: space-between;
        gap: 14px;
        align-items: start;
    }

    .cl-entry-meta {
        display: flex;
        gap: 12px;
        align-items: start;
    }

    .cl-avatar {
        width: 38px;
        height: 38px;
        border-radius: 14px;
        border: 1px solid rgba(110,231,255,0.22);
        background: rgba(110,231,255,0.08);
        color: var(--cl-cyan);
        display: grid;
        place-items: center;
        font-weight: 900;
    }

    .cl-entry-title {
        color: var(--cl-text);
        font-size: 0.98rem;
        font-weight: 900;
    }

    .cl-entry-title span {
        color: var(--cl-muted);
        font-weight: 600;
    }

    .cl-entry-time {
        margin-top: 4px;
        color: var(--cl-muted);
        font-size: 0.8rem;
    }

    .cl-entry-sub {
        margin-top: 12px;
        color: #d4dde6;
        font-size: 0.92rem;
        line-height: 1.65;
    }

    .cl-actions {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    .cl-action {
        border-radius: 12px;
        border: 1px solid rgba(255,255,255,0.1);
        background: rgba(255,255,255,0.03);
        color: #dbe4ee;
        padding: 8px 12px;
        font-size: 0.74rem;
        font-weight: 900;
        cursor: pointer;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .cl-detail {
        display: none;
        margin-top: 14px;
        border-radius: 16px;
        border: 1px solid rgba(255,255,255,0.08);
        overflow: hidden;
        background: rgba(255,255,255,0.02);
        font-family: ui-monospace, SFMono-Regular, Menlo, Consolas, monospace;
        font-size: 0.8rem;
    }

    .cl-detail.open {
        display: block;
    }

    .cl-detail-line {
        display: flex;
        gap: 12px;
        padding: 6px 12px;
        line-height: 1.5;
    }

    .cl-detail-line.context { color: #d4dde6; }
    .cl-detail-line.added { background: rgba(74,222,128,0.08); color: #86efac; }
    .cl-detail-line.removed { background: rgba(251,113,133,0.08); color: #fecdd3; }

    .cl-line-num {
        width: 24px;
        text-align: right;
        color: #6f7a89;
        user-select: none;
    }

    .cl-pagination {
        display: flex;
        justify-content: space-between;
        gap: 12px;
        align-items: center;
        flex-wrap: wrap;
        padding-top: 4px;
    }

    .cl-pagination-controls {
        display: flex;
        gap: 8px;
        align-items: center;
        flex-wrap: wrap;
    }

    .cl-pagination-btn {
        min-width: 44px;
        height: 44px;
        border-radius: 14px;
        border: 1px solid rgba(255,255,255,0.1);
        background: rgba(255,255,255,0.04);
        color: var(--cl-text);
        font-weight: 900;
        cursor: pointer;
        padding: 0 14px;
    }

    .cl-pagination-btn[disabled] {
        opacity: 0.45;
        cursor: not-allowed;
    }

    .cl-empty {
        border-radius: 22px;
        border: 1px solid rgba(255,255,255,0.08);
        background: linear-gradient(180deg, rgba(9,9,9,0.96), rgba(4,4,4,0.98));
        padding: 38px 24px;
        text-align: center;
        color: var(--cl-muted);
    }

    .hidden {
        display: none !important;
    }

    @@media (max-width: 1180px) {
        .cl-hero-inner,
        .cl-filter-grid,
        .cl-summary-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
}

<div class="cl-shell">
    <section class="cl-hero">
        <div class="cl-hero-inner">
            <div>
                <div class="cl-kicker"><i class="fa-solid fa-clock-rotate-left"></i> Change Intelligence</div>
                <h1 class="cl-title">Project activity that you can actually search, page, and inspect at speed.</h1>
                <p class="cl-subtitle">
                    This view now behaves like an operational timeline instead of a long static dump.
                    Filter by member, event type, and query. Page through the result set without losing context.
                </p>

                <div class="cl-summary-grid">
                    <div class="cl-stat">
                        <div class="cl-stat-label">Total Events</div>
                        <div class="cl-stat-value">@Model.TotalEvents</div>
                    </div>
                    <div class="cl-stat">
                        <div class="cl-stat-label">Past 24 Hours</div>
                        <div class="cl-stat-value">@Model.Last24hEvents</div>
                    </div>
                    <div class="cl-stat">
                        <div class="cl-stat-label">Dynamic VE Events</div>
                        <div class="cl-stat-value">@Model.DynamicEvents</div>
                    </div>
                </div>
            </div>

            <aside class="cl-command">
                <h3>Project Scope</h3>
                <p>Select the project whose audit stream you want to inspect. Export respects current filters.</p>
                <select id="projectSelect" class="cl-project-select" @(Model.Projects.Count == 0 ? "disabled" : null)>
                    @foreach (var project in Model.Projects)
                    {
                        if (project.Id == Model.SelectedProjectId)
                        {
                            <option value="@project.Id" selected>@project.Name</option>
                        }
                        else
                        {
                            <option value="@project.Id">@project.Name</option>
                        }
                    }
                </select>
            </aside>
        </div>
    </section>

    <section class="cl-controls-panel">
        <div class="cl-controls-head">
            <div>
                <h2 class="cl-controls-title">Filters & Navigation</h2>
                <p class="cl-controls-sub">Search, narrow, paginate, then drill into diffs or activity detail.</p>
            </div>
        </div>
        <div class="cl-controls-body">
            <div class="cl-filter-grid">
                <input type="text" class="cl-search" id="searchLog" placeholder="Search action, user, source, path, subtitle..." />
                <select class="cl-filter" id="memberFilter">
                    <option value="all">All Members</option>
                    @foreach (var member in Model.Members)
                    {
                        <option value="@member">@member</option>
                    }
                </select>
                <select class="cl-filter" id="typeFilter">
                    <option value="all">All Event Types</option>
                    @foreach (var type in Model.EventTypes)
                    {
                        var label = string.IsNullOrWhiteSpace(type) ? type : char.ToUpperInvariant(type[0]) + type.Substring(1);
                        <option value="@type">@label</option>
                    }
                </select>
                <select class="cl-page-size" id="pageSize">
                    <option value="10">10 per page</option>
                    <option value="20" selected>20 per page</option>
                    <option value="40">40 per page</option>
                    <option value="80">80 per page</option>
                </select>
                <button class="cl-btn" id="exportBtn" @(Model.Entries.Count == 0 ? "disabled" : null)><i class="fa-solid fa-download"></i> Export CSV</button>
            </div>

            <div class="cl-meta-row">
                <div id="visibleSummary">@Model.Entries.Count event(s) loaded for @Model.SelectedProjectName</div>
                <div id="pageSummary">Page 1 of 1</div>
            </div>
        </div>
    </section>

    <section class="cl-feed" id="timelineFeed">
        @if (Model.Entries.Count == 0)
        {
            <div class="cl-empty">No activity found for this project yet.</div>
        }
        else
        {
            @foreach (var group in Model.Groups)
            {
                <div class="cl-date-group" data-date-group>
                    <div class="cl-date-head">
                        <span class="cl-date-pill">@group.Label</span>
                        <div class="cl-date-line"></div>
                    </div>

                    @foreach (var entry in group.Entries)
                    {
                        var detailId = $"details-{entry.EntryId}";
                        <article class="cl-entry @entry.CardTypeClass"
                                 data-entry
                                 data-member="@entry.Actor"
                                 data-type="@entry.TypeKey"
                                 data-search="@entry.SearchText">
                            <div class="cl-entry-head">
                                <div class="cl-entry-meta">
                                    <div class="cl-avatar">@entry.ActorInitials</div>
                                    <div>
                                        <div class="cl-entry-title">@entry.Actor <span>- @entry.Title</span></div>
                                        <div class="cl-entry-time" title="@entry.LocalTimeText">@entry.RelativeTime</div>
                                    </div>
                                </div>

                                <div class="cl-actions">
                                    @if (entry.DiffLines.Count > 0 || entry.DetailLines.Count > 0)
                                    {
                                        <button type="button" class="cl-action" data-toggle-details data-target="@detailId"><i class="fa-solid fa-code"></i> @(entry.DiffLines.Count > 0 ? "View Diff" : "Details")</button>
                                    }
                                    @if (!string.IsNullOrWhiteSpace(entry.DeployLogsUrl))
                                    {
                                        <a class="cl-action" href="@entry.DeployLogsUrl"><i class="fa-solid fa-arrow-up-right-from-square"></i> Open Logs</a>
                                    }
                                </div>
                            </div>

                            <div class="cl-entry-sub">@entry.Subtitle</div>

                            @if (entry.DiffLines.Count > 0 || entry.DetailLines.Count > 0)
                            {
                                <div class="cl-detail" id="@detailId">
                                    @if (entry.DiffLines.Count > 0)
                                    {
                                        @for (var i = 0; i < entry.DiffLines.Count; i++)
                                        {
                                            <div class="cl-detail-line @entry.DiffLines[i].Type"><span class="cl-line-num">@(i + 1)</span><span>@entry.DiffLines[i].Text</span></div>
                                        }
                                    }
                                    else
                                    {
                                        @for (var i = 0; i < entry.DetailLines.Count; i++)
                                        {
                                            <div class="cl-detail-line context"><span class="cl-line-num">@(i + 1)</span><span>@entry.DetailLines[i]</span></div>
                                        }
                                    }
                                </div>
                            }
                        </article>
                    }
                </div>
            }
        }
    </section>

    @if (Model.Entries.Count > 0)
    {
        <div class="cl-pagination">
            <div class="cl-pagination-controls">
                <button class="cl-pagination-btn" id="prevPage">Previous</button>
                <button class="cl-pagination-btn" id="nextPage">Next</button>
            </div>
            <div class="cl-pagination-controls">
                <span id="paginationInfo">Page 1 of 1</span>
            </div>
        </div>
    }
</div>

@section Scripts {
<script>
(() => {
    const projectSelect = document.getElementById('projectSelect');
    const searchInput = document.getElementById('searchLog');
    const memberFilter = document.getElementById('memberFilter');
    const typeFilter = document.getElementById('typeFilter');
    const pageSizeSelect = document.getElementById('pageSize');
    const exportBtn = document.getElementById('exportBtn');
    const entries = Array.from(document.querySelectorAll('[data-entry]'));
    const groups = Array.from(document.querySelectorAll('[data-date-group]'));
    const visibleSummary = document.getElementById('visibleSummary');
    const pageSummary = document.getElementById('pageSummary');
    const paginationInfo = document.getElementById('paginationInfo');
    const prevPage = document.getElementById('prevPage');
    const nextPage = document.getElementById('nextPage');

    const state = {
        page: 1,
        pageSize: Number(pageSizeSelect?.value || 20)
    };

    const updateProject = () => {
        const projectId = projectSelect?.value;
        if (!projectId) return;
        const url = new URL(window.location.href);
        url.searchParams.set('projectId', projectId);
        window.location.href = url.toString();
    };

    const matchingEntries = () => {
        const member = (memberFilter?.value || 'all').toLowerCase();
        const type = (typeFilter?.value || 'all').toLowerCase();
        const q = (searchInput?.value || '').trim().toLowerCase();

        return entries.filter((entry) => {
            const entryMember = (entry.dataset.member || '').toLowerCase();
            const entryType = (entry.dataset.type || '').toLowerCase();
            const search = (entry.dataset.search || '').toLowerCase();
            const memberPass = member === 'all' || entryMember === member;
            const typePass = type === 'all' || entryType === type;
            const searchPass = q.length === 0 || search.includes(q);
            return memberPass && typePass && searchPass;
        });
    };

    const applyFilters = () => {
        state.pageSize = Number(pageSizeSelect?.value || 20);
        const filtered = matchingEntries();
        const pages = Math.max(1, Math.ceil(filtered.length / state.pageSize));
        state.page = Math.min(Math.max(state.page, 1), pages);
        const start = (state.page - 1) * state.pageSize;
        const pageItems = new Set(filtered.slice(start, start + state.pageSize));

        entries.forEach((entry) => {
            entry.classList.toggle('hidden', !pageItems.has(entry));
        });

        groups.forEach((group) => {
            const visibleInGroup = group.querySelectorAll('[data-entry]:not(.hidden)').length;
            group.classList.toggle('hidden', visibleInGroup === 0);
        });

        if (visibleSummary) {
            visibleSummary.textContent = `${filtered.length} matching event(s) across ${pages} page(s)`;
        }
        if (pageSummary) {
            pageSummary.textContent = `Showing page ${state.page} of ${pages}`;
        }
        if (paginationInfo) {
            paginationInfo.textContent = `Page ${state.page} of ${pages}`;
        }
        if (prevPage) prevPage.disabled = state.page <= 1;
        if (nextPage) nextPage.disabled = state.page >= pages;
    };

    const exportCsv = () => {
        const projectId = projectSelect?.value || '';
        const member = memberFilter?.value || 'all';
        const type = typeFilter?.value || 'all';
        const q = searchInput?.value || '';

        const url = new URL(window.location.origin + '/Support/ChangeLog');
        url.searchParams.set('handler', 'Export');
        if (projectId) url.searchParams.set('projectId', projectId);
        if (member && member !== 'all') url.searchParams.set('member', member);
        if (type && type !== 'all') url.searchParams.set('type', type);
        if (q.trim().length > 0) url.searchParams.set('q', q.trim());
        window.location.href = url.toString();
    };

    document.addEventListener('click', (event) => {
        const trigger = event.target.closest('[data-toggle-details]');
        if (!trigger) return;
        const targetId = trigger.getAttribute('data-target');
        if (!targetId) return;
        const panel = document.getElementById(targetId);
        if (!panel) return;
        panel.classList.toggle('open');
    });

    projectSelect?.addEventListener('change', updateProject);
    searchInput?.addEventListener('input', () => { state.page = 1; applyFilters(); });
    memberFilter?.addEventListener('change', () => { state.page = 1; applyFilters(); });
    typeFilter?.addEventListener('change', () => { state.page = 1; applyFilters(); });
    pageSizeSelect?.addEventListener('change', () => { state.page = 1; applyFilters(); });
    exportBtn?.addEventListener('click', exportCsv);
    prevPage?.addEventListener('click', () => { state.page = Math.max(1, state.page - 1); applyFilters(); });
    nextPage?.addEventListener('click', () => { state.page += 1; applyFilters(); });

    applyFilters();
})();
</script>
}
