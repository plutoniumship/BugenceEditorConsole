@page
@model BugenceEditConsole.Pages.Auth.ForgotPasswordModel
@{
    ViewData["Title"] = "Bugence - Reset Password";
    Layout = "/Pages/Shared/_AuthLayout.cshtml";
}

<div class="cursor-dot"></div>
<div class="cursor-outline"></div>

<div class="split-layout">
    <div class="login-side">
        <a href="/Auth/Login" class="back-link hover-trigger">
            <i class="fa-solid fa-arrow-left"></i> Back to Login
        </a>

        <div class="reveal active" style="max-width: 420px; width: 100%; margin: 0 auto;">
            <div class="mb-4">
                <i class="fa-solid fa-bug fa-2x" style="color: var(--accent-cyan);"></i>
            </div>
            <div class="login-header">
                <h1>Reset your password</h1>
                <p>We will send a secure OTP to verify your identity.</p>
            </div>

            <div class="signup-card">
                <div class="signup-step active" data-step="1">
                    <div class="form-group">
                        <label class="form-label">Email Address</label>
                        <input class="custom-input" id="fpEmail" placeholder="admin@bugence.com" />
                    </div>
                    <button class="btn-submit hover-trigger" id="sendResetOtpBtn" type="button">Send OTP</button>
                </div>

                <div class="signup-step" data-step="2">
                    <h4>Enter Verification Code</h4>
                    <div class="otp-group">
                        <input type="text" maxlength="1" class="otp-input" />
                        <input type="text" maxlength="1" class="otp-input" />
                        <input type="text" maxlength="1" class="otp-input" />
                        <input type="text" maxlength="1" class="otp-input" />
                        <input type="text" maxlength="1" class="otp-input" />
                        <input type="text" maxlength="1" class="otp-input" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">New Password</label>
                        <input class="custom-input" id="fpPassword" type="password" placeholder="New password" />
                        <div class="password-strength" id="fpStrength"></div>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Confirm Password</label>
                        <input class="custom-input" id="fpConfirm" type="password" placeholder="Confirm password" />
                    </div>
                    <div class="inline-alert" id="fpStatus"></div>
                    <button class="btn-submit hover-trigger" id="resetPasswordBtn" type="button">Reset Password</button>
                    <button class="btn-back" id="fpBackBtn" type="button">Back</button>
                </div>
            </div>
        </div>
    </div>
    <div class="visual-side">
        <div class="stream-container">
            <div class="stream-line"><div class="stream-packet"></div></div>
            <div class="stream-line"><div class="stream-packet"></div></div>
            <div class="stream-line"><div class="stream-packet"></div></div>
            <div class="stream-line"><div class="stream-packet"></div></div>
            <div class="stream-line"><div class="stream-packet"></div></div>
        </div>
        <div class="login-visual-card">
            <div class="status-row">
                <span class="text-white fw-bold small">RESET FLOW</span>
                <div class="d-flex align-items-center gap-2">
                    <div class="status-dot-pulse"></div>
                    <span class="text-success small">Secure</span>
                </div>
            </div>
            <div class="p-3 rounded bg-black border border-secondary border-opacity-25 mt-4">
                <code class="text-secondary small" style="font-family: 'Courier New', monospace;">
                    <span class="text-success">➜</span> Verifying OTP...<br />
                    <span class="text-success">➜</span> Encrypting password...<br />
                    <span class="text-info">➜</span> Ready to reset_
                </code>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const steps = Array.from(document.querySelectorAll('.signup-step'));
        const otpInputs = Array.from(document.querySelectorAll('.otp-input'));
        const fpStatus = document.getElementById('fpStatus');

        const goStep = (num) => {
            steps.forEach(step => step.classList.toggle('active', step.dataset.step === String(num)));
        };

        otpInputs.forEach((input, idx) => {
            input.addEventListener('input', (e) => {
                if (e.target.value && otpInputs[idx + 1]) otpInputs[idx + 1].focus();
            });
        });

        const setStatus = (message, kind = 'info') => {
            fpStatus.textContent = message || '';
            fpStatus.className = `inline-alert ${kind}`;
        };

        document.getElementById('sendResetOtpBtn').addEventListener('click', async () => {
            const email = document.getElementById('fpEmail').value.trim();
            const res = await fetch('/Auth/ForgotPassword?handler=SendOtp', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: new URLSearchParams({ email })
            });
            const data = await res.json();
            if (!data.success) {
                setStatus(data.message || 'Unable to send OTP.', 'error');
                return;
            }
            setStatus(data.warning ? data.warning : 'OTP sent. Check your email.', 'success');
            goStep(2);
        });

        document.getElementById('resetPasswordBtn').addEventListener('click', async () => {
            const payload = {
                email: document.getElementById('fpEmail').value.trim(),
                code: otpInputs.map(i => i.value).join(''),
                newPassword: document.getElementById('fpPassword').value.trim(),
                confirmPassword: document.getElementById('fpConfirm').value.trim()
            };
            const res = await fetch('/Auth/ForgotPassword?handler=Reset', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(payload)
            });
            const data = await res.json();
            if (!data.success) {
                setStatus(data.message || 'Unable to reset password.', 'error');
                return;
            }
            setStatus('Password reset. Redirecting…', 'success');
            if (data.redirectUrl) {
                window.location.href = data.redirectUrl;
            }
        });

        document.getElementById('fpBackBtn').addEventListener('click', () => goStep(1));

        const fpPassword = document.getElementById('fpPassword');
        const fpStrength = document.getElementById('fpStrength');
        fpPassword?.addEventListener('input', () => {
            const value = fpPassword.value || '';
            const score = (value.length >= 8) + /[A-Z]/.test(value) + /[0-9]/.test(value) + /[^A-Za-z0-9]/.test(value);
            const labels = ['Weak', 'Fair', 'Good', 'Strong'];
            fpStrength.textContent = value ? `Strength: ${labels[Math.min(score, 3)]}` : '';
        });

        document.querySelectorAll('.custom-input, .otp-input, .btn-back').forEach(el => {
            el.classList.add('hover-trigger');
        });

        const cursorDot = document.querySelector('.cursor-dot');
        const cursorOutline = document.querySelector('.cursor-outline');
        const hoverTriggers = document.querySelectorAll('.hover-trigger');

        window.addEventListener('mousemove', (e) => {
            const posX = e.clientX; const posY = e.clientY;
            if (cursorDot) {
                cursorDot.style.left = `${posX}px`;
                cursorDot.style.top = `${posY}px`;
            }
            if (cursorOutline) {
                cursorOutline.animate({ left: `${posX}px`, top: `${posY}px` }, { duration: 500, fill: "forwards" });
            }
        });

        hoverTriggers.forEach(trigger => {
            trigger.addEventListener('mouseenter', () => document.body.classList.add('hovering'));
            trigger.addEventListener('mouseleave', () => document.body.classList.remove('hovering'));
        });
    </script>
}

@section Head {
    <link href="https://api.fontshare.com/v2/css?f[]=satoshi@900,700,500,300&f[]=cabinet-grotesk@800,500,700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --bg-black: #020202;
            --bg-card: #0a0a0a;
            --accent-blue: #2563eb;
            --accent-cyan: #06b6d4;
            --text-primary: #ffffff;
            --text-secondary: #a1a1aa;
            --font-head: 'Cabinet Grotesk', sans-serif;
            --font-body: 'Satoshi', sans-serif;
        }
        .mesh, .vignette, header, #cursor { display: none !important; }
        main { max-width: none; padding: 0 0 40px 0; }
        body {
            background-color: var(--bg-black);
            color: var(--text-primary);
            font-family: var(--font-body);
            overflow-x: hidden;
            cursor: none;
            min-height: 100vh;
        }
        ::selection { background: var(--accent-cyan); color: black; }

        .cursor-dot, .cursor-outline {
            position: fixed; top: 0; left: 0;
            transform: translate(-50%, -50%);
            border-radius: 50%; z-index: 9999; pointer-events: none;
        }
        .cursor-dot { width: 8px; height: 8px; background-color: white; }
        .cursor-outline {
            width: 40px; height: 40px;
            border: 1px solid rgba(255, 255, 255, 0.5);
            transition: width 0.2s, height 0.2s, background-color 0.2s;
        }
        body.hovering .cursor-outline {
            width: 60px; height: 60px;
            background-color: rgba(255, 255, 255, 0.1);
            border-color: transparent; backdrop-filter: blur(2px);
        }

        .split-layout { height: 100vh; display: flex; }
        .login-side {
            flex: 1;
            display: flex; flex-direction: column;
            justify-content: center;
            padding: 48px 90px;
            position: relative;
            background: radial-gradient(circle at top left, rgba(6,182,212,0.08), transparent 40%),
                        radial-gradient(circle at 20% 60%, rgba(37,99,235,0.08), transparent 50%),
                        var(--bg-black);
            z-index: 2;
        }
        .visual-side {
            flex: 1;
            position: relative;
            overflow: hidden;
            background: #050505;
            display: flex; align-items: center; justify-content: center;
        }
        .back-link {
            position: absolute; top: 40px; left: 40px;
            text-decoration: none; color: var(--text-secondary);
            font-size: 0.9rem; display: flex; align-items: center; gap: 8px;
            transition: color 0.3s;
        }
        .back-link:hover { color: white; }
        .login-header h1 { font-size: 2.7rem; font-weight: 800; margin-bottom: 10px; font-family: var(--font-head); letter-spacing: -0.02em; }
        .login-header p { color: var(--text-secondary); margin-bottom: 20px; }
        .form-group { margin-bottom: 24px; position: relative; }
        .form-label { color: var(--text-primary); font-weight: 500; font-size: 0.9rem; margin-bottom: 8px; display: block; }
        .custom-input {
            width: 100%;
            padding: 14px 16px;
            background: #0d0d0d;
            color: #e5e7eb;
            border: 1px solid rgba(255,255,255,0.08);
            border-radius: 14px;
            font-size: 0.95rem;
            transition: border-color 0.2s, box-shadow 0.2s, background 0.2s;
        }
        .custom-input::placeholder { color: rgba(255,255,255,0.4); }
        .custom-input:focus { outline: none; border-color: rgba(6,182,212,0.7); box-shadow: 0 0 0 4px rgba(6,182,212,0.15); background: #0b0f11; }
        .btn-submit {
            width: 100%;
            padding: 14px;
            background: linear-gradient(135deg, #ffffff, #d4f7ff);
            color: #040404;
            border: none;
            border-radius: 999px;
            font-weight: 800;
            cursor: pointer;
            margin-top: 5px;
            box-shadow: 0 10px 30px rgba(6,182,212,0.25);
        }
        .btn-back {
            margin-top: 12px;
            width: 100%;
            padding: 12px;
            background: transparent;
            border: 1px solid rgba(255,255,255,0.16);
            color: white;
            border-radius: 999px;
            cursor: pointer;
        }
        .stream-container {
            position: absolute; inset: 0;
            opacity: 0.3;
            display: flex;
            flex-direction: column;
            gap: 24px;
            padding: 40px;
        }
        .stream-line { height: 2px; background: rgba(255,255,255,0.08); position: relative; overflow: hidden; }
        .stream-packet {
            position: absolute; width: 80px; height: 100%;
            background: linear-gradient(90deg, transparent, rgba(6,182,212,0.6), transparent);
            animation: stream 3s linear infinite;
        }
        .login-visual-card {
            width: min(440px, 75%);
            background: rgba(6,6,6,0.88);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 22px;
            padding: 32px;
            box-shadow: 0 50px 90px rgba(0,0,0,0.55);
            z-index: 2;
        }
        &#64;keyframes stream { from { left: -80px; } to { left: 100%; } }

        .signup-card { background: #0a0a0a; border: 1px solid rgba(255,255,255,0.12); border-radius: 22px; padding: 26px; box-shadow: 0 22px 50px rgba(0,0,0,0.45); }
        .signup-step { display: none; }
        .signup-step.active { display: block; animation: fadeUp 0.3s ease; }
        .otp-group { display: flex; gap: 10px; justify-content: center; margin: 18px 0; }
        .otp-input { width: 44px; height: 52px; text-align: center; font-size: 1.4rem; font-weight: 700; border-radius: 12px; border: 1px solid rgba(255,255,255,0.12); background: #0f0f0f; color: white; }
        .inline-alert { margin-top: 10px; font-size: 0.85rem; }
        .inline-alert.error { color: #f87171; }
        .inline-alert.success { color: #34d399; }
        .password-strength { margin-top: 8px; font-size: 0.8rem; color: var(--text-secondary); }
        &#64;keyframes fadeUp { from { opacity: 0; transform: translateY(8px);} to { opacity: 1; transform: translateY(0);} }
    </style>
}
