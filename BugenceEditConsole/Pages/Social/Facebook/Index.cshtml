                </div>
            </div>
        </section>
    </div>
</div>

<script>
(() => {
    const q = (id) => document.getElementById(id);
    const connection = q("integrationConnectionId");
    const rows = q("adsRows");

    const esc = (value) => (value ?? "")
        .toString()
        .replaceAll("&", "&amp;")
        .replaceAll("<", "&lt;")
        .replaceAll(">", "&gt;")
        .replaceAll('"', "&quot;")
        .replaceAll("'", "&#39;");

    const readFilters = () => ({
        integrationConnectionId: connection?.value || "",
        dateFrom: q("dateFrom").value,
        dateTo: q("dateTo").value,
        search: q("search").value.trim(),
        campaignId: q("campaignId").value,
        adsetId: q("adsetId").value,
        status: q("status").value,
        platform: q("platform").value,
        formId: q("formId").value.trim()
    });

    const setStatusClass = (value) => {
        const text = String(value || "").toLowerCase();
        if (!text) return "fb-status";
        if (text.includes("active") || text.includes("connected") || text.includes("enabled")) return "fb-status active";
        if (text.includes("paused") || text.includes("expiring") || text.includes("warning")) return "fb-status paused";
        return "fb-status off";
    };

    function refreshFilterOptions(rowsData) {
        const fill = (el, values, label) => {
            const current = el.value;
            const unique = [...new Set(values.filter(Boolean))].sort();
            el.innerHTML = `<option value="">${label}</option>` + unique.map(v => `<option value="${esc(v)}">${esc(v)}</option>`).join("");
            if (unique.includes(current)) el.value = current;
        };
        fill(q("campaignId"), rowsData.map(x => x.campaignId), "All campaigns");
        fill(q("adsetId"), rowsData.map(x => x.adsetId), "All ad sets");
        q("kCampaigns").textContent = [...new Set(rowsData.map(x => x.campaignId).filter(Boolean))].length;
        q("kAdsets").textContent = [...new Set(rowsData.map(x => x.adsetId).filter(Boolean))].length;
        q("kAds").textContent = rowsData.length;
    }

    async function refreshHealth() {
        if (!connection?.value) return;
        const res = await fetch(`/api/social/facebook/ops/health?integrationConnectionId=${encodeURIComponent(connection.value)}`, { credentials: "same-origin" });
        const data = await res.json();
        const h = data.health || {};
        q("hWebhook").innerHTML = `<span class="${setStatusClass(h.webhookEnabled ? "enabled" : "off")}">${h.webhookEnabled ? "Enabled" : "Disabled"}</span>`;
        q("hDlq").textContent = h.openDeadLetters ?? 0;
        q("hSla").textContent = h.slaBreaches ?? 0;
        q("hConsent").innerHTML = `<span class="${setStatusClass(h.requireConsent ? "warning" : "off")}">${h.requireConsent ? "On" : "Off"}</span>`;
    }

    const query = (obj) => {
        const p = new URLSearchParams();
        Object.entries(obj).forEach(([k, v]) => { if (v) p.append(k, v); });
        return p.toString();
    };

    async function refreshStats() {
        if (!connection?.value) return;
        const params = query({ integrationConnectionId: connection.value, dateFrom: q("dateFrom").value, dateTo: q("dateTo").value });
        const res = await fetch(`/api/social/facebook/ads/stats?${params}`, { credentials: "same-origin" });
        const data = await res.json();
        q("kTotal").textContent = data.totalLeads ?? 0;
        q("kNew").textContent = data.newLeads ?? 0;
        q("kContacted").textContent = `${data.contactedRate ?? 0}%`;
        q("kQualified").textContent = `${data.qualifiedRate ?? 0}%`;
        q("kBooked").textContent = `${data.bookedRate ?? 0}%`;
        q("kAvg").textContent = `${data.avgResponseMinutes ?? 0}m`;
    }

    async function refreshAds() {
        if (!connection?.value) return;
        rows.innerHTML = `<tr><td colspan="12" class="fb-empty">Loading ad inventory...</td></tr>`;
        const res = await fetch(`/api/social/facebook/ads?${query(readFilters())}`, { credentials: "same-origin" });
        const data = await res.json();
        const list = Array.isArray(data.rows) ? data.rows : [];
        refreshFilterOptions(list);
        q("kMode").textContent = connection.value ? "Live" : "Ops";
        if (!list.length) {
            rows.innerHTML = `<tr><td colspan="12" class="fb-empty">No ads match the current filters.</td></tr>`;
            return;
        }

        rows.innerHTML = list.map(r => `
            <tr>
                <td>
                    <div class="fb-inline-stack">
                        <a class="fb-link" href="/social/facebook/ads/${encodeURIComponent(r.adId)}/leads?integrationConnectionId=${encodeURIComponent(connection.value)}">${esc(r.adName || r.adId)}</a>
                        <span style="color:#76808d;font-size:.76rem;">${esc(r.adId || "-")}</span>
                    </div>
                </td>
                <td>
                    <div class="fb-inline-stack">
                        <span>${esc(r.campaignId || "-")}</span>
                        <span style="color:#76808d;font-size:.76rem;">${esc(r.adsetId || "-")}</span>
                    </div>
                </td>
                <td><span class="${setStatusClass(r.status)}">${esc(r.status || "-")}</span></td>
                <td>${esc((r.platform || "-").toUpperCase())}</td>
                <td>${esc(r.leadForm || "-")}</td>
                <td>${r.leads ?? 0}</td>
                <td>${r.newLeads ?? 0}</td>
                <td>${r.contactedRate ?? 0}%</td>
                <td>${r.qualifiedRate ?? 0}%</td>
                <td>${r.bookedRate ?? 0}%</td>
                <td>${r.lastLeadAtUtc ? new Date(r.lastLeadAtUtc).toLocaleString() : "-"}</td>
                <td><a class="fb-btn" href="/social/facebook/ads/${encodeURIComponent(r.adId)}/leads?integrationConnectionId=${encodeURIComponent(connection.value)}">View Leads</a></td>
            </tr>
        `).join("");
    }

    async function runSync(kind) {
        if (!connection?.value) return;
        const body = kind === "ads"
            ? { integrationConnectionId: connection.value }
            : { integrationConnectionId: connection.value, lookbackMinutes: 30 };
        await fetch(`/api/social/facebook/sync/${kind}`, {
            method: "POST",
            credentials: "same-origin",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(body)
        });
        await Promise.all([refreshHealth(), refreshStats(), refreshAds()]);
    }

    async function hydrate() {
        if (!connection?.value) {
            rows.innerHTML = `<tr><td colspan="12" class="fb-empty">Connect a Meta account from Integrations to start.</td></tr>`;
            return;
        }
        await Promise.all([refreshHealth(), refreshStats(), refreshAds()]);
    }

    document.querySelectorAll("#dateFrom,#dateTo,#search,#campaignId,#adsetId,#status,#platform,#formId").forEach(el => {
        el.addEventListener("change", hydrate);
        if (el.tagName === "INPUT") el.addEventListener("input", hydrate);
    });

    connection?.addEventListener("change", hydrate);
    q("syncAdsBtn")?.addEventListener("click", () => runSync("ads"));
    q("syncLeadsBtn")?.addEventListener("click", () => runSync("leads"));

    hydrate();
})();
</script>
