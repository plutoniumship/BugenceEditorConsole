@page "/social/facebook"
@model BugenceEditConsole.Pages.Social.Facebook.IndexModel
@{
    ViewData["Title"] = "Facebook Marketing";
    ViewData["BodyClass"] = "page-social-facebook";
}

@if (!Model.Enabled)
{
    <div class="alert alert-warning">Social Marketing module is disabled by feature flags.</div>
    return;
}

<style>
    :root {
        --fb-bg: #020202;
        --fb-panel: rgba(9, 9, 9, 0.94);
        --fb-panel-strong: rgba(5, 5, 5, 0.98);
        --fb-border: rgba(255,255,255,0.08);
        --fb-border-strong: rgba(255,255,255,0.14);
        --fb-text: #f5f7fa;
        --fb-muted: #8c95a3;
        --fb-blue: #6ea8ff;
        --fb-cyan: #6cecff;
        --fb-green: #4ade80;
        --fb-gold: #f6c85f;
        --fb-red: #fb7185;
    }

    .fb-shell {
        max-width: 1700px;
        margin: 0 auto;
        display: grid;
        gap: 18px;
        padding-bottom: 28px;
    }

    .fb-hero {
        position: relative;
        overflow: hidden;
        border-radius: 32px;
        border: 1px solid var(--fb-border-strong);
        background:
            radial-gradient(720px 360px at -5% -10%, rgba(108,236,255,0.18), transparent 56%),
            radial-gradient(580px 280px at 110% 0%, rgba(110,168,255,0.18), transparent 58%),
            linear-gradient(140deg, rgba(11,11,11,0.98), rgba(3,3,3,0.98));
        padding: 28px;
        box-shadow: 0 40px 100px rgba(0,0,0,0.55);
    }

    .fb-hero::after {
        content: "";
        position: absolute;
        inset: 0;
        background-image:
            linear-gradient(rgba(255,255,255,0.022) 1px, transparent 1px),
            linear-gradient(90deg, rgba(255,255,255,0.022) 1px, transparent 1px);
        background-size: 34px 34px;
        opacity: 0.18;
        pointer-events: none;
    }

    .fb-hero-inner {
        position: relative;
        z-index: 1;
        display: grid;
        grid-template-columns: minmax(0, 1.2fr) 420px;
        gap: 20px;
    }

    .fb-kicker {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 8px 14px;
        border-radius: 999px;
        border: 1px solid rgba(255,255,255,0.1);
        background: rgba(255,255,255,0.04);
        color: var(--fb-cyan);
        font-size: 0.72rem;
        font-weight: 900;
        letter-spacing: 0.18em;
        text-transform: uppercase;
    }

    .fb-title {
        margin: 14px 0 12px;
        font-family: "Cabinet Grotesk", sans-serif;
        font-size: clamp(2rem, 3vw, 3rem);
        line-height: 1.02;
        letter-spacing: -0.04em;
        color: var(--fb-text);
        max-width: 760px;
    }

    .fb-subtitle {
        margin: 0;
        max-width: 760px;
        color: var(--fb-muted);
        font-size: 1rem;
        line-height: 1.7;
    }

    .fb-lead {
        margin: 0 0 10px;
        max-width: 760px;
        color: var(--fb-muted);
        font-size: 1rem;
        line-height: 1.7;
    }

    .fb-hero-chips {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        margin-top: 18px;
    }

    .fb-chip {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 14px;
        border-radius: 999px;
        border: 1px solid rgba(255,255,255,0.09);
        background: rgba(255,255,255,0.04);
        color: #dbe4ee;
        font-size: 0.78rem;
        font-weight: 800;
        letter-spacing: 0.05em;
        text-transform: uppercase;
    }

    .fb-command {
        border-radius: 26px;
        border: 1px solid rgba(255,255,255,0.1);
        background: linear-gradient(180deg, rgba(16,16,16,0.97), rgba(8,8,8,0.98));
        padding: 18px;
        display: grid;
        gap: 16px;
        align-content: start;
    }

    .fb-command-title {
        margin: 0;
        font-size: 1rem;
        font-weight: 900;
        color: var(--fb-text);
    }

    .fb-command-sub {
        margin: 6px 0 0;
        color: var(--fb-muted);
        font-size: 0.84rem;
        line-height: 1.6;
    }

    .fb-toolbar-grid {
        display: grid;
        grid-template-columns: 1.2fr 1fr 1fr;
        gap: 12px;
    }

    .fb-field {
        display: grid;
        gap: 7px;
    }

    .fb-field label {
        font-size: 0.72rem;
        color: #7a8492;
        letter-spacing: 0.12em;
        text-transform: uppercase;
        font-weight: 900;
    }

    .fb-input,
    .fb-select {
        width: 100%;
        height: 48px;
        border-radius: 16px;
        border: 1px solid rgba(255,255,255,0.12);
        background: rgba(255,255,255,0.03);
        color: var(--fb-text);
        padding: 0 14px;
        font-size: 0.92rem;
    }

    .fb-input:focus,
    .fb-select:focus {
        outline: none;
        border-color: rgba(108,236,255,0.55);
        box-shadow: 0 0 0 4px rgba(108,236,255,0.08);
    }

    .fb-command-actions {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .fb-btn,
    .fb-btn-accent {
        height: 46px;
        padding: 0 16px;
        border-radius: 16px;
        border: 1px solid rgba(255,255,255,0.12);
        background: rgba(255,255,255,0.04);
        color: var(--fb-text);
        font-size: 0.86rem;
        font-weight: 900;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        justify-content: center;
        text-decoration: none;
        cursor: pointer;
        transition: transform 0.2s ease, filter 0.2s ease, border-color 0.2s ease;
    }

    .fb-btn-accent {
        background: linear-gradient(135deg, var(--fb-cyan), var(--fb-blue));
        color: #031116;
        border-color: rgba(108,236,255,0.14);
    }

    .fb-btn:hover,
    .fb-btn-accent:hover {
        transform: translateY(-1px);
        filter: brightness(1.04);
    }

    .fb-band {
        display: grid;
        grid-template-columns: repeat(4, minmax(0, 1fr));
        gap: 12px;
    }

    .fb-stat {
        border-radius: 22px;
        border: 1px solid rgba(255,255,255,0.08);
        background:
            radial-gradient(280px 100px at 100% 0%, rgba(255,255,255,0.04), transparent 60%),
            linear-gradient(180deg, rgba(10,10,10,0.96), rgba(6,6,6,0.96));
        padding: 18px;
        min-height: 118px;
    }

    .fb-stat-label {
        color: #788394;
        font-size: 0.72rem;
        text-transform: uppercase;
        letter-spacing: 0.14em;
        font-weight: 900;
    }

    .fb-stat-value {
        margin-top: 12px;
        font-size: 2rem;
        font-weight: 900;
        color: var(--fb-text);
        letter-spacing: -0.04em;
    }

    .fb-stat-meta {
        margin-top: 10px;
        color: var(--fb-muted);
        font-size: 0.82rem;
    }

    .fb-layout {
        display: grid;
        grid-template-columns: 310px minmax(0, 1fr);
        gap: 18px;
    }

    .fb-panel {
        border-radius: 26px;
        border: 1px solid rgba(255,255,255,0.08);
        background:
            radial-gradient(320px 120px at 100% 0%, rgba(255,255,255,0.04), transparent 60%),
            linear-gradient(180deg, rgba(9,9,9,0.95), rgba(4,4,4,0.98));
        box-shadow: 0 18px 46px rgba(0,0,0,0.42);
        overflow: hidden;
    }

    .fb-panel-head {
        padding: 20px 20px 14px;
        border-bottom: 1px solid rgba(255,255,255,0.06);
        display: flex;
        align-items: end;
        justify-content: space-between;
        gap: 12px;
    }

    .fb-panel-title {
        margin: 0;
        font-size: 1rem;
        font-weight: 900;
        color: var(--fb-text);
    }

    .fb-panel-sub {
        margin: 6px 0 0;
        color: var(--fb-muted);
        font-size: 0.84rem;
    }

    .fb-filter-stack {
        padding: 18px;
        display: grid;
        gap: 14px;
    }

    .fb-filter-grid {
        display: grid;
        gap: 10px;
    }

    .fb-health-grid,
    .fb-kpi-grid {
        padding: 18px;
        display: grid;
        gap: 12px;
    }

    .fb-health-grid {
        grid-template-columns: repeat(4, minmax(0, 1fr));
    }

    .fb-kpi-grid {
        grid-template-columns: repeat(6, minmax(0, 1fr));
    }

    .fb-health-chip,
    .fb-kpi {
        border-radius: 18px;
        border: 1px solid rgba(255,255,255,0.08);
        background: rgba(255,255,255,0.03);
        padding: 14px;
    }

    .fb-health-chip .l,
    .fb-kpi .l {
        color: #7d8795;
        font-size: 0.72rem;
        font-weight: 900;
        letter-spacing: 0.1em;
        text-transform: uppercase;
    }

    .fb-health-chip .v,
    .fb-kpi .v {
        margin-top: 8px;
        color: var(--fb-text);
        font-size: 1.15rem;
        font-weight: 900;
    }

    .fb-table-wrap {
        padding: 0 18px 18px;
    }

    .fb-table-shell {
        border-radius: 22px;
        border: 1px solid rgba(255,255,255,0.08);
        overflow: hidden;
        background: rgba(255,255,255,0.02);
    }

    .fb-table {
        width: 100%;
        border-collapse: collapse;
    }

    .fb-table th,
    .fb-table td {
        padding: 14px 12px;
        border-bottom: 1px solid rgba(255,255,255,0.06);
        vertical-align: middle;
    }

    .fb-table th {
        background: rgba(255,255,255,0.02);
        color: #7b8593;
        font-size: 0.72rem;
        text-transform: uppercase;
        letter-spacing: 0.12em;
        font-weight: 900;
        text-align: left;
    }

    .fb-table td {
        color: #dfe7f0;
        font-size: 0.88rem;
    }

    .fb-table tbody tr:hover {
        background: rgba(255,255,255,0.03);
    }

    .fb-link {
        color: var(--fb-cyan);
        text-decoration: none;
        font-weight: 800;
    }

    .fb-link:hover {
        color: #c8fbff;
    }

    .fb-status {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 12px;
        border-radius: 999px;
        border: 1px solid rgba(255,255,255,0.08);
        background: rgba(255,255,255,0.04);
        font-size: 0.74rem;
        font-weight: 900;
        text-transform: uppercase;
        letter-spacing: 0.08em;
    }

    .fb-status.active,
    .fb-status.connected,
    .fb-status.enabled {
        color: #86efac;
        border-color: rgba(74,222,128,0.18);
    }

    .fb-status.paused,
    .fb-status.warning {
        color: #fcd34d;
        border-color: rgba(246,200,95,0.18);
    }

    .fb-status.off,
    .fb-status.error {
        color: #fecdd3;
        border-color: rgba(251,113,133,0.18);
    }

    .fb-empty {
        text-align: center;
        padding: 48px 24px;
        color: var(--fb-muted);
        font-size: 0.95rem;
    }

    .fb-inline-stack {
        display: grid;
        gap: 2px;
    }

    @@media (max-width: 1440px) {
        .fb-hero-inner,
        .fb-layout {
            grid-template-columns: 1fr;
        }
    }

    @@media (max-width: 1120px) {
        .fb-band,
        .fb-health-grid,
        .fb-kpi-grid,
        .fb-toolbar-grid {
            grid-template-columns: repeat(2, minmax(0, 1fr));
        }
    }

    @@media (max-width: 760px) {
        .fb-shell {
            padding-bottom: 20px;
        }

        .fb-hero,
        .fb-panel-head,
        .fb-filter-stack,
        .fb-health-grid,
        .fb-kpi-grid,
        .fb-table-wrap {
            padding-left: 14px;
            padding-right: 14px;
        }

        .fb-band,
        .fb-health-grid,
        .fb-kpi-grid,
        .fb-toolbar-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="fb-shell">
    @if (!string.IsNullOrWhiteSpace(Model.LoadError))
    {
        <div class="alert alert-danger">@Model.LoadError</div>
    }

    <section class="fb-hero">
        <div class="fb-hero-inner">
            <div>
                <div class="fb-kicker"><i class="fa-brands fa-facebook"></i> Social Media Marketing</div>
                <h1 class="fb-title">Facebook Marketing</h1>
                <p class="fb-lead">Run Facebook lead operations from a surface that actually looks enterprise-grade.</p>
                <p class="fb-subtitle">
                    This page is now the operational command center for ad performance, lead velocity, sync health, and automation handoff.
                    The workflow builder stays lean. Marketing gets a dedicated dark, fast, and purpose-built control layer.
                </p>
                <div class="fb-hero-chips">
                    <span class="fb-chip"><i class="fa-solid fa-bolt"></i> Ads to lead ops</span>
                    <span class="fb-chip"><i class="fa-solid fa-chart-line"></i> KPI-driven</span>
                    <span class="fb-chip"><i class="fa-solid fa-shield-halved"></i> Sync health aware</span>
                </div>
            </div>

            <aside class="fb-command">
                <div>
                    <h2 class="fb-command-title">Control Surface</h2>
                    <p class="fb-command-sub">Select the connected Meta account, filter the signal, and jump directly into live lead operations.</p>
                </div>
                <div class="fb-toolbar-grid">
                    <div class="fb-field" style="grid-column: span 3;">
                        <label for="integrationConnectionId">Integration Account</label>
                        <select id="integrationConnectionId" class="fb-select">
                            @foreach (var c in Model.Connections)
                            {
                                <option value="@c.Id">@c.DisplayName (@c.Status)</option>
                            }
                        </select>
                    </div>
                    <div class="fb-field" style="grid-column: span 2;">
                        <label for="search">Search</label>
                        <input id="search" class="fb-input" placeholder="Ad, campaign, ad set, form" />
                    </div>
                    <div class="fb-field">
                        <label for="platform">Platform</label>
